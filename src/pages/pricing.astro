---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Products & Services - Aura Global Corporation">
  <!-- Hero Section -->
  <section class="section-padding py-20 lg:py-28 relative overflow-hidden">
    <div class="absolute inset-0 opacity-30 pointer-events-none">
      <div class="absolute top-20 left-10 w-96 h-96 bg-gradient-to-br from-aura-cyan/20 to-transparent rounded-full blur-3xl animate-pulse" style="animation-duration: 4s;"></div>
      <div class="absolute bottom-20 right-10 w-80 h-80 bg-gradient-to-tl from-aura-cyan/10 to-transparent rounded-full blur-3xl animate-pulse" style="animation-duration: 6s;"></div>
    </div>

    <div class="max-w-5xl mx-auto text-center relative z-10 animate-in">
      <h1 class="text-4xl sm:text-5xl lg:text-7xl font-display font-black mb-6">
        <span class="text-gradient">Products & Services</span>
      </h1>
      <p class="text-lg sm:text-xl lg:text-2xl mb-6" style="color: var(--text-secondary);">
        Healthcare technology products and professional services — built for modern practices.
      </p>
      <p class="text-base lg:text-lg max-w-3xl mx-auto" style="color: var(--text-muted);">
        From inventory management to electronic medical records to professional websites — everything your practice needs to thrive in the digital age.
      </p>

      <!-- Category Navigation -->
      <div class="flex items-center justify-center gap-4 mt-10">
        <a href="#products" class="inline-flex items-center gap-2 px-6 py-3 rounded-full text-sm font-display font-bold transition-all duration-300 hover:scale-105" style="background: var(--accent); color: #0D1B2A;">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/></svg>
          Products
        </a>
        <a href="#services" class="inline-flex items-center gap-2 px-6 py-3 rounded-full text-sm font-display font-bold transition-all duration-300 hover:scale-105 border" style="color: var(--accent); border-color: var(--accent);">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/></svg>
          Services
        </a>
      </div>
    </div>
  </section>

  <!-- ═══════════════════════════════════════════ -->
  <!-- PRODUCTS SECTION                            -->
  <!-- ═══════════════════════════════════════════ -->
  <section id="products" class="section-padding py-16 lg:py-20 relative" style="background: var(--bg-secondary);">
    <div class="max-w-7xl mx-auto">

      <!-- Section Header -->
      <div class="flex items-center gap-3 mb-4 animate-in">
        <div class="w-2 h-2 rounded-full" style="background: var(--accent);"></div>
        <span class="text-xs font-display font-bold uppercase tracking-widest" style="color: var(--accent);">Products</span>
        <div class="flex-1 h-px" style="background: var(--border);"></div>
      </div>
      <div class="text-center mb-14 animate-in">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-display font-black mb-4" style="color: var(--text-primary);">
          Healthcare Software Products
        </h2>
        <p class="text-base lg:text-lg max-w-3xl mx-auto" style="color: var(--text-muted);">
          Purpose-built software for hospitals, clinics, and healthcare practices. HIPAA, GDPR & DPDP compliant by design.
        </p>
      </div>

      <!-- Product Cards -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-10">

        <!-- Product 1: Medical Inventory Management System -->
        <div class="glass-card rounded-2xl overflow-hidden transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl animate-in group">
          <!-- Header -->
          <div class="relative p-6 lg:p-8" style="background: linear-gradient(135deg, rgba(0,229,255,0.08), rgba(0,229,255,0.02));">
            <div class="w-14 h-14 rounded-2xl flex items-center justify-center mb-5" style="background: rgba(0,229,255,0.12); border: 1px solid rgba(0,229,255,0.2);">
              <svg class="w-7 h-7" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
              </svg>
            </div>
            <h3 class="text-2xl font-display font-black mb-2" style="color: var(--text-primary);">Medical Inventory Management System</h3>
            <p class="text-sm leading-relaxed" style="color: var(--text-muted);">
              Comprehensive inventory control for hospitals, clinics, and pharmacies. Track stock, manage expiry, automate reorders.
            </p>
            <span class="inline-flex items-center gap-1.5 mt-4 px-3 py-1 rounded-full text-[10px] font-display font-bold uppercase" style="background: rgba(0,229,255,0.1); color: var(--accent); border: 1px solid rgba(0,229,255,0.2);">
              <span class="w-1.5 h-1.5 rounded-full bg-green-400"></span>
              Available Now
            </span>
          </div>

          <!-- Features -->
          <div class="p-6 lg:p-8 pt-0 lg:pt-0">
            <h4 class="text-xs font-display font-bold uppercase tracking-wider mb-4 mt-6" style="color: var(--accent);">Key Features</h4>
            <ul class="space-y-3 text-sm" style="color: var(--text-secondary);">
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Real-time stock tracking & alerts</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Expiry date management & FEFO tracking</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Automated reorder points & purchase orders</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Barcode & QR code scanning</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Multi-location inventory sync</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Advanced analytics & reporting dashboard</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Vendor management & supplier tracking</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>API access for third-party integrations</span>
              </li>
            </ul>

            <!-- Compliance -->
            <div class="flex flex-wrap gap-2 mt-6">
              <span class="px-2.5 py-1 rounded-md text-[10px] font-display font-medium" style="background: var(--surface); color: var(--text-muted); border: 1px solid var(--border);">HIPAA</span>
              <span class="px-2.5 py-1 rounded-md text-[10px] font-display font-medium" style="background: var(--surface); color: var(--text-muted); border: 1px solid var(--border);">GDPR</span>
              <span class="px-2.5 py-1 rounded-md text-[10px] font-display font-medium" style="background: var(--surface); color: var(--text-muted); border: 1px solid var(--border);">DPDP</span>
            </div>

            <a href="/contact" class="btn-primary w-full justify-center mt-6">Get Started</a>
          </div>
        </div>

        <!-- Product 2: GoEMR -->
        <div class="glass-card rounded-2xl overflow-hidden transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl animate-in group">
          <!-- Header -->
          <div class="relative p-6 lg:p-8" style="background: linear-gradient(135deg, rgba(168,230,207,0.08), rgba(168,230,207,0.02));">
            <div class="w-14 h-14 rounded-2xl flex items-center justify-center mb-5" style="background: rgba(168,230,207,0.12); border: 1px solid rgba(168,230,207,0.2);">
              <svg class="w-7 h-7" style="color: #A8E6CF;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-display font-black mb-2" style="color: var(--text-primary);">GoEMR</h3>
            <p class="text-sm leading-relaxed" style="color: var(--text-muted);">
              Next-generation Electronic Medical Records system. Digital prescriptions, patient history, lab integration, and telemedicine — all in one platform.
            </p>
            <span class="inline-flex items-center gap-1.5 mt-4 px-3 py-1 rounded-full text-[10px] font-display font-bold uppercase" style="background: rgba(168,230,207,0.1); color: #A8E6CF; border: 1px solid rgba(168,230,207,0.2);">
              <span class="w-1.5 h-1.5 rounded-full" style="background: #A8E6CF;"></span>
              Coming Q3-Q4 2026
            </span>
          </div>

          <!-- Features -->
          <div class="p-6 lg:p-8 pt-0 lg:pt-0">
            <h4 class="text-xs font-display font-bold uppercase tracking-wider mb-4 mt-6" style="color: #A8E6CF;">Key Features</h4>
            <ul class="space-y-3 text-sm" style="color: var(--text-secondary);">
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #A8E6CF;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Digital prescriptions & e-signatures</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #A8E6CF;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Complete patient history & records</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #A8E6CF;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Lab & diagnostic integration</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #A8E6CF;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Appointment scheduling & calendar</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #A8E6CF;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Billing, claims & insurance management</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #A8E6CF;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Telemedicine & video consultations</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #A8E6CF;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Multi-department management</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #A8E6CF;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>PACS & imaging integration</span>
              </li>
            </ul>

            <!-- Compliance -->
            <div class="flex flex-wrap gap-2 mt-6">
              <span class="px-2.5 py-1 rounded-md text-[10px] font-display font-medium" style="background: var(--surface); color: var(--text-muted); border: 1px solid var(--border);">HIPAA</span>
              <span class="px-2.5 py-1 rounded-md text-[10px] font-display font-medium" style="background: var(--surface); color: var(--text-muted); border: 1px solid var(--border);">GDPR</span>
              <span class="px-2.5 py-1 rounded-md text-[10px] font-display font-medium" style="background: var(--surface); color: var(--text-muted); border: 1px solid var(--border);">DPDP</span>
              <span class="px-2.5 py-1 rounded-md text-[10px] font-display font-medium" style="background: var(--surface); color: var(--text-muted); border: 1px solid var(--border);">HL7 FHIR</span>
            </div>

            <a href="#waitlist" class="btn-secondary w-full justify-center mt-6">Join Waitlist</a>
          </div>
        </div>

        <!-- Product 3: Patient Portal -->
        <div class="glass-card rounded-2xl overflow-hidden transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl animate-in group">
          <!-- Header -->
          <div class="relative p-6 lg:p-8" style="background: linear-gradient(135deg, rgba(255,183,77,0.08), rgba(255,183,77,0.02));">
            <div class="w-14 h-14 rounded-2xl flex items-center justify-center mb-5" style="background: rgba(255,183,77,0.12); border: 1px solid rgba(255,183,77,0.2);">
              <svg class="w-7 h-7" style="color: #FFB74D;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-display font-black mb-2" style="color: var(--text-primary);">Patient Portal</h3>
            <p class="text-sm leading-relaxed" style="color: var(--text-muted);">
              Empower patients with self-service access to their health records, appointment booking, prescriptions, and secure messaging with providers.
            </p>
            <span class="inline-flex items-center gap-1.5 mt-4 px-3 py-1 rounded-full text-[10px] font-display font-bold uppercase" style="background: rgba(255,183,77,0.1); color: #FFB74D; border: 1px solid rgba(255,183,77,0.2);">
              <span class="w-1.5 h-1.5 rounded-full" style="background: #FFB74D;"></span>
              Coming Q3-Q4 2026
            </span>
          </div>

          <!-- Features -->
          <div class="p-6 lg:p-8 pt-0 lg:pt-0">
            <h4 class="text-xs font-display font-bold uppercase tracking-wider mb-4 mt-6" style="color: #FFB74D;">Key Features</h4>
            <ul class="space-y-3 text-sm" style="color: var(--text-secondary);">
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #FFB74D;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Online appointment booking & management</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #FFB74D;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>View medical records & lab results</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #FFB74D;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Prescription history & refill requests</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #FFB74D;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Secure messaging with healthcare providers</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #FFB74D;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Bill payments & insurance claims tracking</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #FFB74D;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Health reminders & medication alerts</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #FFB74D;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Family member account linking</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #FFB74D;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                <span>Seamless integration with GoEMR</span>
              </li>
            </ul>

            <!-- Compliance -->
            <div class="flex flex-wrap gap-2 mt-6">
              <span class="px-2.5 py-1 rounded-md text-[10px] font-display font-medium" style="background: var(--surface); color: var(--text-muted); border: 1px solid var(--border);">HIPAA</span>
              <span class="px-2.5 py-1 rounded-md text-[10px] font-display font-medium" style="background: var(--surface); color: var(--text-muted); border: 1px solid var(--border);">GDPR</span>
              <span class="px-2.5 py-1 rounded-md text-[10px] font-display font-medium" style="background: var(--surface); color: var(--text-muted); border: 1px solid var(--border);">DPDP</span>
            </div>

            <a href="#waitlist" class="btn-secondary w-full justify-center mt-6">Join Waitlist</a>
          </div>
        </div>
      </div>

      <!-- Waitlist Form -->
      <div id="waitlist" class="glass-card rounded-2xl p-8 lg:p-12 max-w-3xl mx-auto mt-16 animate-in">
        <div class="text-center mb-8">
          <h3 class="text-2xl sm:text-3xl font-display font-black mb-3" style="color: var(--text-primary);">Join the Product Waitlist</h3>
          <p class="text-base" style="color: var(--text-muted);">Be among the first to experience next-gen healthcare software</p>
        </div>

        <form class="space-y-6">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
              <label for="waitlist-name" class="block text-sm font-display font-semibold mb-2" style="color: var(--text-primary);">Full Name *</label>
              <input type="text" id="waitlist-name" required class="w-full px-4 py-3 rounded-lg border text-sm transition-all focus:outline-none focus:ring-2" style="background: var(--surface); border-color: var(--border); color: var(--text-primary); --tw-ring-color: var(--accent);" placeholder="Dr. Rajesh Kumar">
            </div>
            <div>
              <label for="waitlist-hospital" class="block text-sm font-display font-semibold mb-2" style="color: var(--text-primary);">Hospital/Clinic Name *</label>
              <input type="text" id="waitlist-hospital" required class="w-full px-4 py-3 rounded-lg border text-sm transition-all focus:outline-none focus:ring-2" style="background: var(--surface); border-color: var(--border); color: var(--text-primary); --tw-ring-color: var(--accent);" placeholder="City Hospital">
            </div>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
              <label for="waitlist-email" class="block text-sm font-display font-semibold mb-2" style="color: var(--text-primary);">Email Address *</label>
              <input type="email" id="waitlist-email" required class="w-full px-4 py-3 rounded-lg border text-sm transition-all focus:outline-none focus:ring-2" style="background: var(--surface); border-color: var(--border); color: var(--text-primary); --tw-ring-color: var(--accent);" placeholder="email@example.com">
            </div>
            <div>
              <label for="waitlist-phone" class="block text-sm font-display font-semibold mb-2" style="color: var(--text-primary);">Phone Number *</label>
              <input type="tel" id="waitlist-phone" required class="w-full px-4 py-3 rounded-lg border text-sm transition-all focus:outline-none focus:ring-2" style="background: var(--surface); border-color: var(--border); color: var(--text-primary); --tw-ring-color: var(--accent);" placeholder="+91 98765 43210">
            </div>
          </div>

          <div>
            <label class="block text-sm font-display font-semibold mb-3" style="color: var(--text-primary);">Product Interest *</label>
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
              <label class="flex items-center gap-3 p-3 rounded-lg border cursor-pointer transition-all hover:border-[var(--accent)]" style="background: var(--surface); border-color: var(--border);">
                <input type="checkbox" name="product-interest" value="inventory" class="w-4 h-4 rounded accent-[var(--accent)]">
                <span class="text-sm" style="color: var(--text-primary);">Inventory Management</span>
              </label>
              <label class="flex items-center gap-3 p-3 rounded-lg border cursor-pointer transition-all hover:border-[var(--accent)]" style="background: var(--surface); border-color: var(--border);">
                <input type="checkbox" name="product-interest" value="goemr" class="w-4 h-4 rounded accent-[var(--accent)]">
                <span class="text-sm" style="color: var(--text-primary);">GoEMR</span>
