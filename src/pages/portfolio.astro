---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Portfolio - Aura Global Corporation">

  <!-- ═══════════════════════════════════════════ -->
  <!-- HERO SECTION                                -->
  <!-- ═══════════════════════════════════════════ -->
  <section class="relative min-h-[60vh] flex items-center overflow-hidden" style="background: var(--bg-primary);">
    <!-- Background Effects -->
    <div class="absolute inset-0">
      <div class="absolute top-1/4 -right-32 w-[500px] h-[500px] rounded-full opacity-20 blur-[120px]" style="background: var(--accent);"></div>
      <div class="absolute bottom-1/4 -left-32 w-[400px] h-[400px] rounded-full opacity-10 blur-[100px]" style="background: var(--accent);"></div>
    </div>

    <div class="relative section-padding max-w-[1440px] mx-auto w-full py-20 lg:py-24">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full mb-6 animate-in" style="background: rgba(0,229,255,0.08); border: 1px solid rgba(0,229,255,0.15);">
          <svg class="w-4 h-4" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="text-xs font-display font-medium" style="color: var(--accent);">Our Work</span>
        </div>

        <!-- Heading -->
        <h1 class="font-display font-extrabold text-4xl sm:text-5xl lg:text-6xl leading-[1.05] mb-6 animate-in">
          <span style="color: var(--text-primary);">Real Results for</span><br/>
          <span class="text-gradient">Real Healthcare Practices</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-base lg:text-lg leading-relaxed max-w-2xl mx-auto animate-in" style="color: var(--text-muted);">
          We don't showcase mock-ups. Every project below is a live website built and deployed for a real healthcare practice — delivering measurable impact.
        </p>
      </div>
    </div>
  </section>

  <!-- ═══════════════════════════════════════════ -->
  <!-- FEATURED CLIENT: JB GUPTA HOSPITAL          -->
  <!-- ═══════════════════════════════════════════ -->
  <section class="relative section-padding max-w-[1440px] mx-auto py-16 lg:py-24">

    <!-- Featured Label -->
    <div class="flex items-center gap-3 mb-10 animate-in">
      <div class="w-2 h-2 rounded-full" style="background: var(--accent);"></div>
      <span class="text-xs font-display font-bold uppercase tracking-widest" style="color: var(--accent);">Featured Client</span>
      <div class="flex-1 h-px" style="background: var(--border);"></div>
    </div>

    <!-- Main Card -->
    <div class="glass-card rounded-3xl overflow-hidden portfolio-card animate-in border" style="border-color: var(--accent);">
      <div class="grid lg:grid-cols-2 gap-0">

        <!-- Left: Visual Area with Real Hospital Image -->
        <div class="relative h-72 lg:h-auto overflow-hidden" style="min-height: 400px;">
          <!-- Hospital Building Photo -->
          <img src="/images/portfolio/jbgupta-hospital.png" alt="JB Gupta Hospital Building - Bhiwani, Haryana" class="absolute inset-0 w-full h-full object-cover" />
          <!-- Gradient Overlay for readability -->
          <div class="absolute inset-0 bg-gradient-to-t from-[#0D1B2A]/95 via-[#0D1B2A]/50 to-[#0D1B2A]/30"></div>
          <div class="absolute inset-0 flex flex-col items-end justify-end p-8">

            <!-- Hospital Logo + Identity -->
            <div class="w-full">
              <div class="flex items-center gap-4 mb-4">
                <img src="/images/portfolio/jbgupta-logo.jpg" alt="JB Gupta Hospital Logo" class="w-16 h-16 rounded-2xl object-contain border-2 border-white/20" style="background: white;" />
                <div>
                  <h3 class="font-display font-extrabold text-white text-xl lg:text-2xl leading-tight">JB Gupta Hospital</h3>
                  <p class="text-white/70 text-xs font-display font-medium">More Than Care... Commitment</p>
                  <p class="text-white/50 text-[10px]">Bhiwani, Haryana</p>
                </div>
              </div>

              <!-- Live Site Link -->
              <a href="https://jbguptahospital.com/" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full text-xs font-display font-bold transition-all duration-300 hover:scale-105 mb-4" style="background: var(--accent); color: #0D1B2A;">
                <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
                Visit Live Website
              </a>

              <!-- Accreditations -->
              <div class="flex flex-wrap items-center gap-2">
                <span class="px-3 py-1 rounded-full text-[10px] font-display font-bold" style="background: rgba(255,255,255,0.15); color: rgba(255,255,255,0.85); backdrop-filter: blur(8px);">NABH Accredited</span>
                <span class="px-3 py-1 rounded-full text-[10px] font-display font-bold" style="background: rgba(255,255,255,0.15); color: rgba(255,255,255,0.85); backdrop-filter: blur(8px);">Ayushman Bharat</span>
                <span class="px-3 py-1 rounded-full text-[10px] font-display font-bold" style="background: rgba(255,255,255,0.15); color: rgba(255,255,255,0.85); backdrop-filter: blur(8px);">ECHS</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Right: Content Area -->
        <div class="p-8 lg:p-10">

          <!-- Plan Badge -->
          <div class="flex items-center gap-3 mb-5">
            <span class="badge">Enterprise Plan</span>
            <span class="px-3 py-1 rounded-full text-[10px] font-display font-bold" style="background: rgba(0,229,255,0.1); color: var(--accent); border: 1px solid rgba(0,229,255,0.2);">First Customer</span>
          </div>

          <h4 class="font-display font-bold text-xl lg:text-2xl mb-4" style="color: var(--text-primary);">
            Multi-Specialty Hospital Website with Department Pages & Doctor Directory
          </h4>

          <!-- About -->
          <div class="mb-6">
            <h5 class="text-xs font-display font-bold uppercase tracking-wider mb-2" style="color: var(--accent);">About the Hospital</h5>
            <p class="text-sm leading-relaxed" style="color: var(--text-muted);">
              Founded by Late Dr. J.B Gupta, this NABH-accredited multi-specialty hospital in Bhiwani, Haryana has been serving the community for over two decades. The hospital offers advanced ICU (Level II), 24/7 emergency care, dialysis, and a wide range of diagnostic and treatment services.
            </p>
          </div>

          <!-- What We Built -->
          <div class="mb-6">
            <h5 class="text-xs font-display font-bold uppercase tracking-wider mb-3" style="color: var(--accent);">What We Delivered</h5>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-2.5">
              {[
                'Full multi-page responsive website',
                'Department-wise service pages',
                'Doctor profiles with specialties',
                'Visiting specialist directory',
                'Government schemes info (Ayushman Bharat, ECHS)',
                'Facility & infrastructure showcase',
                '24/7 emergency contact integration',
                'Mobile-first responsive design',
                'SEO optimization for local search',
                'FREE lifetime hosting & SSL',
              ].map(item => (
                <div class="flex items-start gap-2">
                  <svg class="w-4 h-4 mt-0.5 flex-shrink-0" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                  <span class="text-xs" style="color: var(--text-secondary);">{item}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Key Departments -->
          <div class="mb-6">
            <h5 class="text-xs font-display font-bold uppercase tracking-wider mb-3" style="color: var(--accent);">Departments Featured</h5>
            <div class="flex flex-wrap gap-2">
              {['Internal Medicine', 'Critical Care', 'Anesthesiology', 'Endocrinology', 'Nephrology', 'Neurology', 'Hemato-Oncology', 'Emergency', 'Dialysis'].map(dept => (
                <span class="px-3 py-1.5 rounded-lg text-[10px] font-display font-medium" style="background: var(--surface); color: var(--text-secondary); border: 1px solid var(--border);">{dept}</span>
              ))}
            </div>
          </div>

          <!-- Doctor Team -->
          <div class="mb-6">
            <h5 class="text-xs font-display font-bold uppercase tracking-wider mb-3" style="color: var(--accent);">Core Medical Team</h5>
            <div class="space-y-2">
              <div class="flex items-center gap-3 p-3 rounded-xl" style="background: var(--surface); border: 1px solid var(--border);">
                <div class="w-9 h-9 rounded-full flex items-center justify-center flex-shrink-0" style="background: rgba(0,229,255,0.1);">
                  <span class="text-xs font-display font-bold" style="color: var(--accent);">AG</span>
                </div>
                <div>
                  <p class="text-sm font-display font-semibold" style="color: var(--text-primary);">Dr. Albee Gupta</p>
                  <p class="text-[10px]" style="color: var(--text-muted);">MD — Internal Medicine</p>
                </div>
              </div>
              <div class="flex items-center gap-3 p-3 rounded-xl" style="background: var(--surface); border: 1px solid var(--border);">
                <div class="w-9 h-9 rounded-full flex items-center justify-center flex-shrink-0" style="background: rgba(0,229,255,0.1);">
                  <span class="text-xs font-display font-bold" style="color: var(--accent);">UA</span>
                </div>
                <div>
                  <p class="text-sm font-display font-semibold" style="color: var(--text-primary);">Dr. Udita Anand Gupta</p>
                  <p class="text-[10px]" style="color: var(--text-muted);">MD — Anesthesiology</p>
                </div>
              </div>
              <div class="flex items-center gap-3 p-3 rounded-xl" style="background: var(--surface); border: 1px solid var(--border);">
                <div class="w-9 h-9 rounded-full flex items-center justify-center flex-shrink-0" style="background: rgba(0,229,255,0.1);">
                  <span class="text-xs font-display font-bold" style="color: var(--accent);">M</span>
                </div>
                <div>
                  <p class="text-sm font-display font-semibold" style="color: var(--text-primary);">Dr. Mandeep</p>
                  <p class="text-[10px]" style="color: var(--text-muted);">DM — Head of Critical Care, Trauma & Critical Care</p>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>

    <!-- Client Testimonial -->
    <div class="mt-10 glass-card rounded-2xl p-8 lg:p-10 animate-in">
      <div class="flex items-start gap-5">
        <div class="w-14 h-14 rounded-2xl flex items-center justify-center flex-shrink-0" style="background: rgba(0,229,255,0.1); border: 1px solid rgba(0,229,255,0.2);">
          <svg class="w-6 h-6" style="color: var(--accent);" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
          </svg>
        </div>
        <div>
          <p class="text-base lg:text-lg leading-relaxed mb-4" style="color: var(--text-secondary);">
            "Aura Global Corporation delivered exactly what we needed — a professional, modern website that represents our hospital's legacy and commitment to healthcare. The team understood our requirements perfectly and the Enterprise plan gave us everything from department pages to doctor profiles. We're proud to be their first customer."
          </p>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full flex items-center justify-center" style="background: rgba(0,229,255,0.1);">
              <span class="text-xs font-display font-bold" style="color: var(--accent);">AG</span>
            </div>
            <div>
              <p class="font-display font-bold text-sm" style="color: var(--text-primary);">Dr. Albee Gupta</p>
              <p class="text-xs" style="color: var(--text-muted);">JB Gupta Hospital, Bhiwani</p>
            </div>
          </div>
        </div>
      </div>
    </div>

  </section>

  <!-- ═══════════════════════════════════════════ -->
  <!-- YOUR PRACTICE NEXT                          -->
  <!-- ═══════════════════════════════════════════ -->
  <section class="relative py-16 lg:py-20 overflow-hidden" style="background: var(--bg-secondary);">
    <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-bl from-cyan-500/10 to-transparent blur-3xl"></div>

    <div class="section-padding max-w-[1440px] mx-auto">
      <div class="relative glass-card rounded-3xl overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-[#00E5FF]/5 via-transparent to-[#00E5FF]/5"></div>

        <div class="relative text-center px-8 py-16 lg:py-20">
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full mb-6" style="background: rgba(0,229,255,0.08); border: 1px solid rgba(0,229,255,0.15);">
            <span class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full opacity-75" style="background: var(--accent);"></span>
              <span class="relative inline-flex rounded-full h-2 w-2" style="background: var(--accent);"></span>
            </span>
            <span class="text-xs font-display font-medium" style="color: var(--accent);">Limited Time Offer</span>
          </div>

          <h2 class="font-display font-extrabold text-3xl sm:text-4xl lg:text-5xl mb-6">
            <span style="color: var(--text-primary);">Your Practice Could Be</span><br/>
            <span class="text-gradient">Our Next Success Story</span>
          </h2>

          <p class="text-base lg:text-lg max-w-2xl mx-auto mb-10" style="color: var(--text-muted);">
            Join JB Gupta Hospital and be part of our growing portfolio. Get an exclusive one-time 26% discount as one of our first 26 customers.
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-wrap items-center justify-center gap-4">
            <a href="/offers" class="btn-primary">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
              Claim 26% Discount
            </a>
            <a href="/contact" class="btn-secondary">
              Book Free Consultation
            </a>
          </div>

          <!-- Trust Indicators -->
          <div class="mt-10 flex flex-wrap items-center justify-center gap-6 text-sm" style="color: var(--text-muted);">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>No Lock-In Contracts</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>HIPAA Compliant</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>30-Day Money Back</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- GSAP ANIMATIONS -->
  <script>
    if (typeof IntersectionObserver !== 'undefined') {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });

      document.querySelectorAll('.animate-in').forEach(el => observer.observe(el));

      const portfolioCards = document.querySelectorAll('.portfolio-card');
      portfolioCards.forEach(card => {
        card.addEventListener('mouseenter', () => {
          card.style.transform = 'translateY(-8px)';
          card.style.transition = 'transform 0.3s ease, box-shadow 0.3s ease';
          card.style.boxShadow = '0 20px 60px rgba(0,229,255,0.15)';
        });
        card.addEventListener('mouseleave', () => {
          card.style.transform = 'translateY(0)';
          card.style.boxShadow = '';
        });
      });
    }
  </script>

  <style>
    .portfolio-card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
  </style>

</BaseLayout>
