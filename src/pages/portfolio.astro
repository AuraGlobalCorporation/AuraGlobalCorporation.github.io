              <div class="grid grid-cols-2 gap-3">
                <div class="rounded-xl p-4" style="background: var(--surface); border: 1px solid var(--border);">
                  <p class="text-2xl font-display font-bold mb-1" style="color: var(--accent);">1,200</p>
                  <p class="text-xs" style="color: var(--text-muted);">Monthly organic traffic<br/>(in 6 months)</p>
                </div>
                <div class="rounded-xl p-4" style="background: var(--surface); border: 1px solid var(--border);">
                  <p class="text-2xl font-display font-bold mb-1" style="color: var(--accent);">840</p>
                  <p class="text-xs" style="color: var(--text-muted);">Newsletter<br/>subscribers</p>
                </div>
                <div class="rounded-xl p-4" style="background: var(--surface); border: 1px solid var(--border);">
                  <p class="text-2xl font-display font-bold mb-1" style="color: var(--accent);">65%</p>
                  <p class="text-xs" style="color: var(--text-muted);">Bookings via<br/>website</p>
                </div>
                <div class="rounded-xl p-4" style="background: var(--surface); border: 1px solid var(--border);">
                  <p class="text-2xl font-display font-bold mb-1 text-green-400">2 Lang</p>
                  <p class="text-xs" style="color: var(--text-muted);">Hindi & English<br/>support</p>
                </div>
              </div>
            </div>

            <!-- Tech Stack -->
            <div class="flex flex-wrap gap-2">
              <span class="badge-success text-[10px]">Astro</span>
