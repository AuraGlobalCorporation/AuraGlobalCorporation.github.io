---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Portfolio - Aura Global Corporation">

  <!-- ═══════════════════════════════════════════ -->
  <!-- HERO SECTION                                -->
  <!-- ═══════════════════════════════════════════ -->
  <section class="relative min-h-[60vh] flex items-center overflow-hidden" style="background: var(--bg-primary);">
    <!-- Background Effects -->
    <div class="absolute inset-0">
      <div class="absolute top-1/4 -right-32 w-[500px] h-[500px] rounded-full opacity-20 blur-[120px]" style="background: var(--accent);"></div>
      <div class="absolute bottom-1/4 -left-32 w-[400px] h-[400px] rounded-full opacity-10 blur-[100px]" style="background: var(--accent);"></div>
    </div>

    <div class="relative section-padding max-w-[1440px] mx-auto w-full py-20 lg:py-24">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full mb-6 animate-in" style="background: rgba(0,229,255,0.08); border: 1px solid rgba(0,229,255,0.15);">
          <svg class="w-4 h-4" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="text-xs font-display font-medium" style="color: var(--accent);">Real Results, Real Impact</span>
        </div>

        <!-- Heading -->
        <h1 class="font-display font-extrabold text-4xl sm:text-5xl lg:text-6xl leading-[1.05] mb-6 animate-in">
          <span class="text-gradient">Clinical Success Stories</span><br/>
          <span style="color: var(--text-primary);">& Website Showcases</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-base lg:text-lg leading-relaxed max-w-2xl mx-auto animate-in" style="color: var(--text-muted);">
          Transforming healthcare digital presence, one practice at a time. See how our Diagnostic Noir design philosophy delivers measurable results for clinics and hospitals across India.
        </p>
      </div>
    </div>
  </section>

  <!-- ═══════════════════════════════════════════ -->
  <!-- PORTFOLIO GRID                              -->
  <!-- ═══════════════════════════════════════════ -->
  <section class="relative section-padding max-w-[1440px] mx-auto py-16 lg:py-24">

    <!-- Portfolio Grid - First card full width, then 2 columns -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-10">

      <!-- ============================================= -->
      <!-- CARD 1: DERMATOLOGY CLINIC (FULL WIDTH)      -->
      <!-- ============================================= -->
      <div class="lg:col-span-2 glass-card rounded-2xl overflow-hidden portfolio-card animate-in group">
        <div class="grid lg:grid-cols-2 gap-0">
          <!-- Image Area -->
          <div class="relative h-64 lg:h-auto overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-blue-500 via-cyan-500 to-teal-400 opacity-90"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center p-8">
                <div class="w-20 h-20 mx-auto mb-4 rounded-2xl flex items-center justify-center" style="background: rgba(255,255,255,0.2); backdrop-filter: blur(10px);">
                  <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
                  </svg>
                </div>
                <h3 class="font-display font-bold text-white text-2xl">Dr. Sharma's Skin & Laser Clinic</h3>
                <p class="text-white/80 text-sm mt-2">Dermatology Excellence</p>
              </div>
            </div>
          </div>

          <!-- Content Area -->
          <div class="p-8 lg:p-10">
            <div class="mb-6">
              <span class="badge mb-3">Business Pro Plan</span>
              <h4 class="font-display font-bold text-xl mb-3" style="color: var(--text-primary);">10-Page Responsive Website with Dark Mode</h4>
            </div>

            <!-- Challenge -->
            <div class="mb-5">
              <h5 class="text-xs font-display font-bold uppercase tracking-wider mb-2" style="color: var(--accent);">Challenge</h5>
              <p class="text-sm leading-relaxed" style="color: var(--text-muted);">
                Outdated website with slow load times, low mobile traffic, and poor user engagement. Patients were leaving before booking consultations.
              </p>
            </div>

            <!-- Solution -->
            <div class="mb-5">
              <h5 class="text-xs font-display font-bold uppercase tracking-wider mb-2" style="color: var(--accent);">Solution</h5>
              <p class="text-sm leading-relaxed" style="color: var(--text-muted);">
                Business Pro Plan with responsive design, dark mode toggle, before/after gallery with lazy loading, and WhatsApp integration for instant consultations.
              </p>
            </div>

            <!-- Results Grid -->
            <div class="mb-6">
              <h5 class="text-xs font-display font-bold uppercase tracking-wider mb-3" style="color: var(--accent);">Results</h5>
              <div class="grid grid-cols-2 gap-3">
                <div class="rounded-xl p-4" style="background: var(--surface); border: 1px solid var(--border);">
                  <p class="text-2xl font-display font-bold mb-1" style="color: var(--accent);">86%</p>
                  <p class="text-xs" style="color: var(--text-muted);">Load time improvement<br/>(2.8s → 0.4s)</p>
                </div>
                <div class="rounded-xl p-4" style="background: var(--surface); border: 1px solid var(--border);">
                  <p class="text-2xl font-display font-bold mb-1" style="color: var(--accent);">68%</p>
                  <p class="text-xs" style="color: var(--text-muted);">Mobile traffic<br/>(up from 35%)</p>
                </div>
                <div class="rounded-xl p-4" style="background: var(--surface); border: 1px solid var(--border);">
                  <p class="text-2xl font-display font-bold mb-1" style="color: var(--accent);">+145%</p>
                  <p class="text-xs" style="color: var(--text-muted);">Increase in<br/>patient inquiries</p>
                </div>
                <div class="rounded-xl p-4" style="background: var(--surface); border: 1px solid var(--border);">
                  <p class="text-2xl font-display font-bold mb-1 text-green-400">Page 1</p>
                  <p class="text-xs" style="color: var(--text-muted);">Google ranking<br/>(from Page 3)</p>
                </div>
              </div>
            </div>

            <!-- Tech Stack -->
            <div class="flex flex-wrap gap-2">
              <span class="badge-success text-[10px]">Astro</span>
              <span class="badge-success text-[10px]">Shadcn UI</span>
              <span class="badge-success text-[10px]">Tailwind CSS</span>
              <span class="badge-success text-[10px]">WhatsApp API</span>
            </div>
          </div>
        </div>
      </div>

      <!-- ============================================= -->
      <!-- CARD 2: MULTI-SPECIALTY HOSPITAL             -->
      <!-- ============================================= -->
      <div class="glass-card rounded-2xl overflow-hidden portfolio-card animate-in group">
        <!-- Image Area -->
        <div class="relative h-56 overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-purple-600 via-violet-500 to-indigo-500 opacity-90"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center p-6">
              <div class="w-16 h-16 mx-auto mb-3 rounded-2xl flex items-center justify-center" style="background: rgba(255,255,255,0.2); backdrop-filter: blur(10px);">
                <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <h3 class="font-display font-bold text-white text-xl">City Care Hospital</h3>
              <p class="text-white/80 text-sm mt-1">Multi-Specialty Healthcare</p>
            </div>
          </div>
        </div>

        <!-- Content Area -->
        <div class="p-6">
          <div class="mb-5">
            <span class="badge mb-3">Enterprise Plan</span>
            <h4 class="font-display font-bold text-lg mb-3" style="color: var(--text-primary);">20-Page Hospital Portal with Department Microsites</h4>
          </div>

          <!-- Challenge -->
          <div class="mb-4">
            <h5 class="text-xs font-display font-bold uppercase tracking-wider mb-2" style="color: var(--accent);">Challenge</h5>
            <p class="text-sm leading-relaxed" style="color: var(--text-muted);">
              12 departments causing patient confusion, fragmented information, and overwhelming phone call volume for appointments.
            </p>
          </div>

          <!-- Solution -->
          <div class="mb-4">
            <h5 class="text-xs font-display font-bold uppercase tracking-wider mb-2" style="color: var(--accent);">Solution</h5>
            <p class="text-sm leading-relaxed" style="color: var(--text-muted);">
              Enterprise Plan with department microsites, comprehensive doctor directory, multi-step booking system with real-time availability.
            </p>
          </div>

          <!-- Results Grid -->
          <div class="mb-5">
            <h5 class="text-xs font-display font-bold uppercase tracking-wider mb-3" style="color: var(--accent);">Results</h5>
            <div class="grid grid-cols-2 gap-3">
              <div class="rounded-xl p-3" style="background: var(--surface); border: 1px solid var(--border);">
                <p class="text-xl font-display font-bold mb-1" style="color: var(--accent);">-60%</p>
                <p class="text-xs" style="color: var(--text-muted);">Phone call volume</p>
              </div>
              <div class="rounded-xl p-3" style="background: var(--surface); border: 1px solid var(--border);">
                <p class="text-xl font-display font-bold mb-1" style="color: var(--accent);">+230%</p>
                <p class="text-xs" style="color: var(--text-muted);">Online appointments</p>
              </div>
              <div class="rounded-xl p-3" style="background: var(--surface); border: 1px solid var(--border);">
                <p class="text-xl font-display font-bold mb-1 text-green-400">4.6/5</p>
                <p class="text-xs" style="color: var(--text-muted);">Patient satisfaction</p>
              </div>
              <div class="rounded-xl p-3" style="background: var(--surface); border: 1px solid var(--border);">
                <p class="text-xl font-display font-bold mb-1 text-green-400">Featured</p>
                <p class="text-xs" style="color: var(--text-muted);">Local news coverage</p>
              </div>
            </div>
          </div>

          <!-- Tech Stack -->
          <div class="flex flex-wrap gap-2">
            <span class="badge-success text-[10px]">Astro</span>
            <span class="badge-success text-[10px]">GSAP</span>
            <span class="badge-success text-[10px]">Custom React</span>
            <span class="badge-success text-[10px]">Calendar API</span>
          </div>
        </div>
      </div>

      <!-- ============================================= -->
      <!-- CARD 3: MENTAL HEALTH PRACTICE               -->
      <!-- ============================================= -->
      <div class="glass-card rounded-2xl overflow-hidden portfolio-card animate-in group">
        <!-- Image Area -->
        <div class="relative h-56 overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-emerald-500 via-teal-500 to-cyan-500 opacity-90"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center p-6">
              <div class="w-16 h-16 mx-auto mb-3 rounded-2xl flex items-center justify-center" style="background: rgba(255,255,255,0.2); backdrop-filter: blur(10px);">
                <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
              </div>
              <h3 class="font-display font-bold text-white text-xl">Mindful Wellness Center</h3>
              <p class="text-white/80 text-sm mt-1">Mental Health & Therapy</p>
            </div>
          </div>
        </div>

        <!-- Content Area -->
        <div class="p-6">
          <div class="mb-5">
            <span class="badge mb-3">Freedom Plan</span>
            <h4 class="font-display font-bold text-lg mb-3" style="color: var(--text-primary);">Privacy-First Mental Health Portal</h4>
          </div>

          <!-- Challenge -->
          <div class="mb-4">
            <h5 class="text-xs font-display font-bold uppercase tracking-wider mb-2" style="color: var(--accent);">Challenge</h5>
            <p class="text-sm leading-relaxed" style="color: var(--text-muted);">
              Stigma-sensitive practice requiring reassuring, private digital presence that builds trust before first contact.
            </p>
          </div>

          <!-- Solution -->
          <div class="mb-4">
            <h5 class="text-xs font-display font-bold uppercase tracking-wider mb-2" style="color: var(--accent);">Solution</h5>
            <p class="text-sm leading-relaxed" style="color: var(--text-muted);">
              Freedom Plan with Neuro Comfort palette, anonymous inquiry forms, HIPAA-compliant infrastructure, and dark mode by default for comfort.
            </p>
          </div>

          <!-- Results Grid -->
          <div class="mb-5">
            <h5 class="text-xs font-display font-bold uppercase tracking-wider mb-3" style="color: var(--accent);">Results</h5>
            <div class="grid grid-cols-2 gap-3">
              <div class="rounded-xl p-3" style="background: var(--surface); border: 1px solid var(--border);">
                <p class="text-xl font-display font-bold mb-1" style="color: var(--accent);">89%</p>
                <p class="text-xs" style="color: var(--text-muted);">Found via website</p>
              </div>
              <div class="rounded-xl p-3" style="background: var(--surface); border: 1px solid var(--border);">
                <p class="text-xl font-display font-bold mb-1" style="color: var(--accent);">4.2min</p>
                <p class="text-xs" style="color: var(--text-muted);">Session duration</p>
              </div>
              <div class="rounded-xl p-3" style="background: var(--surface); border: 1px solid var(--border);">
                <p class="text-xl font-display font-bold mb-1 text-green-400">28%</p>
                <p class="text-xs" style="color: var(--text-muted);">Low bounce rate</p>
              </div>
              <div class="rounded-xl p-3" style="background: var(--surface); border: 1px solid var(--border);">
                <p class="text-xl font-display font-bold mb-1 text-green-400">HIPAA</p>
                <p class="text-xs" style="color: var(--text-muted);">Fully compliant</p>
              </div>
            </div>
          </div>

          <!-- Tech Stack -->
          <div class="flex flex-wrap gap-2">
            <span class="badge-success text-[10px]">Astro</span>
            <span class="badge-success text-[10px]">Radix UI</span>
            <span class="badge-success text-[10px]">View Transitions</span>
            <span class="badge-success text-[10px]">HIPAA</span>
          </div>
        </div>
      </div>

      <!-- ============================================= -->
      <!-- CARD 4: DENTAL CLINIC E-COMMERCE             -->
      <!-- ============================================= -->
      <div class="glass-card rounded-2xl overflow-hidden portfolio-card animate-in group">
        <!-- Image Area -->
        <div class="relative h-56 overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-rose-500 via-pink-500 to-fuchsia-500 opacity-90"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center p-6">
              <div class="w-16 h-16 mx-auto mb-3 rounded-2xl flex items-center justify-center" style="background: rgba(255,255,255,0.2); backdrop-filter: blur(10px);">
                <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
              <h3 class="font-display font-bold text-white text-xl">Smile Studio Dental Care</h3>
              <p class="text-white/80 text-sm mt-1">Dental Clinic + E-Commerce</p>
            </div>
          </div>
        </div>

        <!-- Content Area -->
        <div class="p-6">
          <div class="mb-5">
            <span class="badge mb-3">Enterprise Plan</span>
            <h4 class="font-display font-bold text-lg mb-3" style="color: var(--text-primary);">Dental Clinic with Integrated Product Store</h4>
          </div>

          <!-- Challenge -->
          <div class="mb-4">
            <h5 class="text-xs font-display font-bold uppercase tracking-wider mb-2" style="color: var(--accent);">Challenge</h5>
            <p class="text-sm leading-relaxed" style="color: var(--text-muted);">
              Wanted to sell oral care products online without expensive e-commerce platform fees and complex integrations.
            </p>
          </div>

          <!-- Solution -->
          <div class="mb-4">
            <h5 class="text-xs font-display font-bold uppercase tracking-wider mb-2" style="color: var(--accent);">Solution</h5>
            <p class="text-sm leading-relaxed" style="color: var(--text-muted);">
              Enterprise Plan with product catalog (25 items), WhatsApp-based ordering system, and Razorpay payment gateway integration.
            </p>
          </div>

          <!-- Results Grid -->
          <div class="mb-5">
            <h5 class="text-xs font-display font-bold uppercase tracking-wider mb-3" style="color: var(--accent);">Results</h5>
            <div class="grid grid-cols-2 gap-3">
              <div class="rounded-xl p-3" style="background: var(--surface); border: 1px solid var(--border);">
                <p class="text-xl font-display font-bold mb-1" style="color: var(--accent);">₹1.2L</p>
                <p class="text-xs" style="color: var(--text-muted);">Monthly sales</p>
              </div>
              <div class="rounded-xl p-3" style="background: var(--surface); border: 1px solid var(--border);">
                <p class="text-xl font-display font-bold mb-1 text-green-400">Zero</p>
                <p class="text-xs" style="color: var(--text-muted);">Platform fees</p>
              </div>
              <div class="rounded-xl p-3" style="background: var(--surface); border: 1px solid var(--border);">
                <p class="text-xl font-display font-bold mb-1" style="color: var(--accent);">78%</p>
                <p class="text-xs" style="color: var(--text-muted);">Mobile orders</p>
              </div>
              <div class="rounded-xl p-3" style="background: var(--surface); border: 1px solid var(--border);">
                <p class="text-xl font-display font-bold mb-1" style="color: var(--accent);">42%</p>
                <p class="text-xs" style="color: var(--text-muted);">Repeat customers</p>
              </div>
            </div>
          </div>

          <!-- Tech Stack -->
          <div class="flex flex-wrap gap-2">
            <span class="badge-success text-[10px]">Astro</span>
            <span class="badge-success text-[10px]">Snipcart</span>
            <span class="badge-success text-[10px]">Tailwind CSS</span>
            <span class="badge-success text-[10px]">Razorpay</span>
          </div>
        </div>
      </div>

      <!-- ============================================= -->
      <!-- CARD 5: AYURVEDIC WELLNESS CENTER            -->
      <!-- ============================================= -->
      <div class="lg:col-span-2 glass-card rounded-2xl overflow-hidden portfolio-card animate-in group">
        <div class="grid lg:grid-cols-2 gap-0">
          <!-- Image Area -->
          <div class="relative h-64 lg:h-auto overflow-hidden lg:order-2">
            <div class="absolute inset-0 bg-gradient-to-br from-amber-500 via-orange-500 to-yellow-400 opacity-90"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center p-8">
                <div class="w-20 h-20 mx-auto mb-4 rounded-2xl flex items-center justify-center" style="background: rgba(255,255,255,0.2); backdrop-filter: blur(10px);">
                  <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
                  </svg>
                </div>
