---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Us - Aura Global Corporation">

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <!-- HERO                                        -->
  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="relative py-20 lg:py-28 overflow-hidden" style="background: var(--bg-primary);">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-grid-pattern bg-grid opacity-40 dark:opacity-100"></div>
      <div class="absolute top-1/3 right-0 w-[500px] h-[500px] rounded-full opacity-10 blur-[120px]" style="background: var(--accent);"></div>
    </div>
    <div class="relative section-padding max-w-[1440px] mx-auto text-center">
      <span class="badge mb-6 animate-in">Get in Touch</span>
      <h1 class="font-display font-extrabold text-4xl sm:text-5xl lg:text-6xl mb-6 animate-in" style="color: var(--text-primary);">
        Let's build the <span class="text-gradient">future</span> together
      </h1>
      <p class="text-base lg:text-lg max-w-2xl mx-auto animate-in" style="color: var(--text-muted);">
        Whether you need a complete inventory management system, an AI-powered EMR, or a professional website for your practice ‚Äî we're here to help.
      </p>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <!-- CONTACT FORM + INFO                         -->
  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="relative py-16 lg:py-24" style="background: var(--bg-secondary);">
    <div class="section-padding max-w-[1440px] mx-auto">
      <div class="grid lg:grid-cols-5 gap-12 lg:gap-16">

        <!-- Contact Form - Takes 3 cols -->
        <div class="lg:col-span-3 animate-in">
          <div class="glass-card rounded-2xl p-8 lg:p-10">
            <h2 class="font-display font-bold text-2xl mb-2" style="color: var(--text-primary);">Send us a message</h2>
            <p class="text-sm mb-8" style="color: var(--text-muted);">
              Fill out the form below and we'll get back to you within 24 hours.
            </p>

            <form id="contact-form" class="space-y-6" novalidate>
              <div class="grid sm:grid-cols-2 gap-6">
                <!-- Name -->
                <div>
                  <label for="name" class="block text-xs font-display font-medium mb-2 uppercase tracking-wider" style="color: var(--text-secondary);">
                    Full Name <span style="color: var(--accent);">*</span>
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    placeholder="Dr. John Doe"
                    class="w-full px-4 py-3 rounded-xl text-sm transition-all duration-200 outline-none focus:ring-2"
                    style="background: var(--surface); border: 1px solid var(--border); color: var(--text-primary); --tw-ring-color: var(--accent);"
                  />
                </div>

                <!-- Email -->
                <div>
                  <label for="email" class="block text-xs font-display font-medium mb-2 uppercase tracking-wider" style="color: var(--text-secondary);">
                    Email Address <span style="color: var(--accent);">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    placeholder="doctor@clinic.com"
                    class="w-full px-4 py-3 rounded-xl text-sm transition-all duration-200 outline-none focus:ring-2"
                    style="background: var(--surface); border: 1px solid var(--border); color: var(--text-primary); --tw-ring-color: var(--accent);"
                  />
                </div>
              </div>

              <div class="grid sm:grid-cols-2 gap-6">
                <!-- Phone -->
                <div>
                  <label for="phone" class="block text-xs font-display font-medium mb-2 uppercase tracking-wider" style="color: var(--text-secondary);">
                    Phone Number
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    placeholder="+91-XXX-XXX-XXXX"
                    class="w-full px-4 py-3 rounded-xl text-sm transition-all duration-200 outline-none focus:ring-2"
                    style="background: var(--surface); border: 1px solid var(--border); color: var(--text-primary); --tw-ring-color: var(--accent);"
                  />
                </div>

                <!-- Practice Type -->
                <div>
                  <label for="practice-type" class="block text-xs font-display font-medium mb-2 uppercase tracking-wider" style="color: var(--text-secondary);">
                    Practice Type
                  </label>
                  <select
                    id="practice-type"
                    name="practice-type"
                    class="w-full px-4 py-3 rounded-xl text-sm transition-all duration-200 outline-none focus:ring-2 appearance-none cursor-pointer"
                    style="background: var(--surface); border: 1px solid var(--border); color: var(--text-primary); --tw-ring-color: var(--accent);"
                  >
                    <option value="">Select type...</option>
                    <option value="solo">Solo Practitioner</option>
                    <option value="group">Group Practice</option>
                    <option value="hospital">Hospital</option>
                    <option value="clinic">Clinic Chain</option>
                    <option value="other">Other</option>
                  </select>
                </div>
              </div>

              <!-- Interest -->
              <div>
                <label class="block text-xs font-display font-medium mb-3 uppercase tracking-wider" style="color: var(--text-secondary);">
                  I'm interested in
                </label>
                <div class="flex flex-wrap gap-3">
                  {['Inventory Management', 'GoEMR', 'Patient Portal', 'Website Development', '26% Discount Offer'].map(interest => (
                    <label class="group flex items-center gap-2 px-4 py-2.5 rounded-xl cursor-pointer transition-all duration-200 hover:border-[var(--accent)]" style="background: var(--surface); border: 1px solid var(--border);">
                      <input type="checkbox" name="interest" value={interest} class="w-4 h-4 rounded accent-[var(--accent)]" />
                      <span class="text-xs font-display font-medium" style="color: var(--text-secondary);">{interest}</span>
                    </label>
                  ))}
                </div>
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block text-xs font-display font-medium mb-2 uppercase tracking-wider" style="color: var(--text-secondary);">
                  Message <span style="color: var(--accent);">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="5"
                  placeholder="Tell us about your needs, challenges, or questions..."
                  class="w-full px-4 py-3 rounded-xl text-sm transition-all duration-200 outline-none focus:ring-2 resize-none"
                  style="background: var(--surface); border: 1px solid var(--border); color: var(--text-primary); --tw-ring-color: var(--accent);"
                ></textarea>
              </div>

              <!-- Newsletter Opt-in -->
              <label class="flex items-start gap-3 cursor-pointer">
                <input type="checkbox" name="newsletter" class="mt-0.5 w-4 h-4 rounded accent-[var(--accent)]" />
                <span class="text-xs leading-relaxed" style="color: var(--text-muted);">
                  I'd like to receive updates about Aura Global products, launch announcements, and healthcare technology insights. You can unsubscribe at any time.
                </span>
              </label>

              <!-- HIPAA Notice -->
              <div class="rounded-xl p-4 flex items-start gap-3" style="background: rgba(255,23,68,0.05); border: 1px solid rgba(255,23,68,0.1);">
                <svg class="w-5 h-5 flex-shrink-0 mt-0.5 text-aura-red" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                </svg>
                <p class="text-xs leading-relaxed" style="color: var(--text-muted);">
                  <strong style="color: var(--text-secondary);">HIPAA Notice:</strong> This form is for general inquiries only. Please do <strong>not</strong> include any patient health information (PHI) in your message. For PHI-related communications, please use our secure portal.
                </p>
              </div>

              <!-- Submit -->
              <button type="submit" class="btn-primary w-full justify-center text-sm">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                Send Message
              </button>

              <!-- Success Message (hidden by default) -->
              <div id="form-success" class="hidden text-center py-8">
                <div class="w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4" style="background: rgba(168,230,207,0.1);">
                  <svg class="w-8 h-8 text-aura-mint" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                </div>
                <h3 class="font-display font-bold text-xl mb-2" style="color: var(--text-primary);">Message Sent!</h3>
                <p class="text-sm" style="color: var(--text-muted);">We'll get back to you within 24 hours. Check your email for confirmation.</p>
              </div>
            </form>
          </div>
        </div>

        <!-- Contact Info - Takes 2 cols -->
        <div class="lg:col-span-2 space-y-6 animate-in" style="animation-delay: 0.2s;">

          <!-- Quick Contact -->
          <div class="glass-card rounded-2xl p-7">
            <h3 class="font-display font-bold text-lg mb-6" style="color: var(--text-primary);">Quick Contact</h3>
            <div class="space-y-5">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-xl flex items-center justify-center flex-shrink-0" style="background: rgba(0,229,255,0.1);">
                  <svg class="w-5 h-5" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-xs font-display font-medium uppercase tracking-wider mb-1" style="color: var(--text-muted);">Email</p>
                  <a href="mailto:hello@auraglobalcorp.com" class="text-sm font-medium transition-colors hover:text-[var(--accent)]" style="color: var(--text-primary);">hello@auraglobalcorp.com</a>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-xl flex items-center justify-center flex-shrink-0" style="background: rgba(0,229,255,0.1);">
                  <svg class="w-5 h-5" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-xs font-display font-medium uppercase tracking-wider mb-1" style="color: var(--text-muted);">Phone</p>
                  <a href="tel:+91XXXXXXXXXX" class="text-sm font-medium transition-colors hover:text-[var(--accent)]" style="color: var(--text-primary);">+91-XXX-XXX-XXXX</a>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-xl flex items-center justify-center flex-shrink-0" style="background: rgba(0,229,255,0.1);">
                  <svg class="w-5 h-5" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-xs font-display font-medium uppercase tracking-wider mb-1" style="color: var(--text-muted);">Address</p>
                  <p class="text-sm font-medium" style="color: var(--text-primary);">Aura Global Corporation</p>
                  <p class="text-xs" style="color: var(--text-muted);">India</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Office Hours -->
          <div class="glass-card rounded-2xl p-7">
            <h3 class="font-display font-bold text-lg mb-6" style="color: var(--text-primary);">Office Hours</h3>
            <div class="space-y-3">
              <div class="flex items-center justify-between py-2 border-b" style="border-color: var(--border);">
                <span class="text-sm" style="color: var(--text-secondary);">Monday - Friday</span>
                <span class="text-sm font-display font-medium" style="color: var(--accent);">9:00 AM - 6:00 PM IST</span>
              </div>
              <div class="flex items-center justify-between py-2 border-b" style="border-color: var(--border);">
                <span class="text-sm" style="color: var(--text-secondary);">Saturday</span>
                <span class="text-sm font-display font-medium" style="color: var(--accent);">10:00 AM - 2:00 PM IST</span>
              </div>
              <div class="flex items-center justify-between py-2">
                <span class="text-sm" style="color: var(--text-secondary);">Sunday</span>
                <span class="text-sm font-display font-medium" style="color: var(--text-muted);">Closed</span>
              </div>
            </div>
          </div>

          <!-- Quick CTA -->
          <div class="glass-card rounded-2xl p-7 relative overflow-hidden">
            <div class="absolute inset-0 opacity-5" style="background: linear-gradient(135deg, var(--accent), transparent);"></div>
            <div class="relative">
              <h3 class="font-display font-bold text-lg mb-2" style="color: var(--text-primary);">Want the 26% Discount?</h3>
              <p class="text-sm mb-4" style="color: var(--text-muted);">
                Join the first 26 customers and claim an exclusive one-time 26% discount on all Aura products.
              </p>
              <a href="/products" class="btn-primary w-full justify-center text-xs">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
                Claim Your Spot
              </a>
              <p class="mt-3 text-center text-xs" style="color: var(--text-muted);">
                <span id="contact-spots" class="font-bold" style="color: var(--accent);">18</span> of 26 spots remaining
              </p>
            </div>
          </div>

          <!-- Compliance Assurance -->
          <div class="flex flex-wrap gap-3">
            {['HIPAA Compliant', 'GDPR Ready', 'DPDP Certified'].map(badge => (
              <div class="flex items-center gap-2 px-3 py-2 rounded-lg" style="background: var(--surface); border: 1px solid var(--border);">
                <svg class="w-3.5 h-3.5" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
                <span class="text-[10px] font-display font-medium" style="color: var(--text-secondary);">{badge}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <!-- VALUES STRIP                                -->
  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="py-10 border-t" style="background: var(--bg-primary); border-color: var(--border);">
    <div class="section-padding max-w-[1440px] mx-auto">
      <div class="flex flex-wrap justify-center gap-x-8 gap-y-3 text-xs" style="color: var(--text-muted);">
        <span class="flex items-center gap-2">üí° We believe in cooperation, not competition</span>
        <span class="flex items-center gap-2">üå± Digital-first for a sustainable future</span>
        <span class="flex items-center gap-2">‚úì HIPAA, GDPR, DPDP Compliant</span>
        <span class="flex items-center gap-2">üåç Please consider the environment before printing</span>
      </div>
    </div>
  </section>


  <!-- Scripts -->
  <script>
    import gsap from 'gsap';

    document.addEventListener('DOMContentLoaded', () => {
      // Scroll animations
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });

      document.querySelectorAll('.animate-in').forEach(el => observer.observe(el));

      // Hero entrance
      gsap.fromTo('.animate-in', { opacity: 0, y: 30 }, {
        opacity: 1, y: 0, duration: 0.8, stagger: 0.15, ease: 'power3.out'
      });

      // Form handling
      const form = document.getElementById('contact-form') as HTMLFormElement;
      const success = document.getElementById('form-success');

      form?.addEventListener('submit', (e) => {
        e.preventDefault();

        // Basic validation
        const name = (form.querySelector('#name') as HTMLInputElement).value.trim();
        const email = (form.querySelector('#email') as HTMLInputElement).value.trim();
        const message = (form.querySelector('#message') as HTMLTextAreaElement).value.trim();

        if (!name || !email || !message) {
          return;
        }

        // Simulate submission (replace with actual form endpoint)
        const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<svg class="w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"/></svg> Sending...';

        setTimeout(() => {
          form.style.display = 'none';
          if (success) success.classList.remove('hidden');
        }, 1500);
      });

      // Campaign counter
      fetch('/campaign-data.json')
        .then(r => r.json())
        .then(data => {
          const el = document.getElementById('contact-spots');
          if (el) el.textContent = String(data.spotsRemaining);
        })
        .catch(() => {});
    });
  </script>
</BaseLayout>
