---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Aura Global Corporation - The Future of Healthcare Management">

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <!-- HERO SECTION                                -->
  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="relative min-h-[90vh] flex items-center overflow-hidden" style="background: var(--bg-primary);">
    <!-- Background Effects -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-grid-pattern bg-grid opacity-40 dark:opacity-100"></div>
      <div class="absolute top-1/4 -right-32 w-[500px] h-[500px] rounded-full opacity-20 blur-[120px]" style="background: var(--accent);"></div>
      <div class="absolute bottom-1/4 -left-32 w-[400px] h-[400px] rounded-full opacity-10 blur-[100px]" style="background: var(--accent);"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] rounded-full opacity-5 blur-[150px] bg-purple-500"></div>
    </div>

    <div class="relative section-padding max-w-[1440px] mx-auto w-full py-20 lg:py-28">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Left Content -->
        <div class="max-w-2xl">
          <!-- Launch Badge -->
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full mb-8 animate-fade-up" style="background: rgba(0,229,255,0.08); border: 1px solid rgba(0,229,255,0.15);">
            <span class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full opacity-75" style="background: var(--accent);"></span>
              <span class="relative inline-flex rounded-full h-2 w-2" style="background: var(--accent);"></span>
            </span>
            <span class="text-xs font-display font-medium" style="color: var(--accent);">Launching Soon ‚Äî Medical Inventory System</span>
          </div>

          <h1 class="font-display font-extrabold text-4xl sm:text-5xl lg:text-6xl xl:text-7xl leading-[1.05] mb-6 hero-title">
            <span style="color: var(--text-primary);">The Future of</span><br/>
            <span class="text-gradient">Healthcare</span><br/>
            <span style="color: var(--text-primary);">Management</span>
          </h1>

          <p class="text-base lg:text-lg leading-relaxed mb-8 max-w-xl hero-subtitle" style="color: var(--text-muted);">
            Starting with complete inventory control. Experience futuristic design that prioritizes compliance, cost savings, and operational excellence.
          </p>

          <!-- Discount Callout -->
          <div class="glass-card rounded-2xl p-5 mb-8 hero-discount" style="animation-delay: 0.3s;">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-xl flex items-center justify-center text-xl animate-glow-pulse" style="background: var(--accent); color: var(--bg-primary);">
                üéâ
              </div>
              <div>
                <p class="font-display font-bold text-sm mb-1" style="color: var(--accent);">LAUNCH SPECIAL: 26% OFF FOR FIRST 26 CUSTOMERS</p>
                <p class="text-xs" style="color: var(--text-muted);">One-time discount on all Aura products. Be among the pioneers.</p>
                <div class="mt-3 flex items-center gap-3">
                  <div class="flex-1 h-2 rounded-full overflow-hidden" style="background: var(--bg-tertiary);">
                    <div id="hero-progress-bar" class="h-full rounded-full transition-all duration-1000" style="width: 31%; background: linear-gradient(90deg, var(--accent), #00B8D4);"></div>
                  </div>
                  <span id="hero-spots" class="text-xs font-display font-bold whitespace-nowrap" style="color: var(--accent);">18 of 26 left</span>
                </div>
              </div>
            </div>
          </div>

          <!-- CTAs -->
          <div class="flex flex-wrap gap-4 hero-ctas">
            <a href="/offers" class="btn-primary">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
              Claim Your 26% Discount
            </a>
            <a href="/contact" class="btn-secondary">
              Request Demo
            </a>
          </div>
        </div>

        <!-- Right - Dashboard Mockup -->
        <div class="relative hero-mockup hidden lg:block">
          <div class="relative animate-float">
            <!-- Main Dashboard Card -->
            <div class="glass-card rounded-2xl p-6 shadow-2xl" style="border: 1px solid var(--border);">
              <div class="flex items-center justify-between mb-5">
                <div class="flex items-center gap-3">
                  <div class="w-3 h-3 rounded-full bg-red-400"></div>
                  <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
                  <div class="w-3 h-3 rounded-full bg-green-400"></div>
                </div>
                <span class="text-[10px] font-mono" style="color: var(--text-muted);">inventory.auraglobal.com</span>
              </div>

              <!-- Mock Dashboard Content -->
              <div class="space-y-4">
                <div class="flex items-center justify-between">
                  <span class="text-xs font-display font-semibold" style="color: var(--text-primary);">Real-Time Inventory</span>
                  <span class="badge text-[10px]">Live</span>
                </div>

                <!-- Stock Levels -->
                <div class="grid grid-cols-3 gap-3">
                  <div class="rounded-xl p-3" style="background: var(--surface);">
                    <p class="text-[10px] mb-1" style="color: var(--text-muted);">Total Items</p>
                    <p class="font-display font-bold text-lg" style="color: var(--accent);">12,847</p>
                    <p class="text-[10px] text-green-400">‚Üë 2.3%</p>
                  </div>
                  <div class="rounded-xl p-3" style="background: var(--surface);">
                    <p class="text-[10px] mb-1" style="color: var(--text-muted);">Low Stock</p>
                    <p class="font-display font-bold text-lg text-yellow-400">23</p>
                    <p class="text-[10px] text-yellow-400">‚ö† Alert</p>
                  </div>
                  <div class="rounded-xl p-3" style="background: var(--surface);">
                    <p class="text-[10px] mb-1" style="color: var(--text-muted);">Expired</p>
                    <p class="font-display font-bold text-lg text-red-400">3</p>
                    <p class="text-[10px] text-red-400">‚Üì 67%</p>
                  </div>
                </div>

                <!-- Mini Chart Lines -->
                <div class="rounded-xl p-4" style="background: var(--surface);">
                  <div class="flex items-center justify-between mb-3">
                    <span class="text-[10px] font-display font-medium" style="color: var(--text-primary);">Monthly Usage Trend</span>
                    <span class="text-[10px]" style="color: var(--text-muted);">Last 6 months</span>
                  </div>
                  <svg class="w-full h-16" viewBox="0 0 200 40">
                    <polyline fill="none" stroke="var(--accent)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" points="0,35 30,28 60,32 90,20 120,15 150,18 180,8 200,12"/>
                    <linearGradient id="chartGrad" x1="0" y1="0" x2="0" y2="1">
                      <stop offset="0%" stop-color="var(--accent)" stop-opacity="0.3"/>
                      <stop offset="100%" stop-color="var(--accent)" stop-opacity="0"/>
                    </linearGradient>
                    <polygon fill="url(#chartGrad)" points="0,35 30,28 60,32 90,20 120,15 150,18 180,8 200,12 200,40 0,40"/>
                  </svg>
                </div>

                <!-- Compliance Status -->
                <div class="flex items-center gap-2">
                  <div class="flex items-center gap-1.5 px-2.5 py-1 rounded-md text-[10px] font-medium bg-green-400/10 text-green-400">
                    <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M5 13l4 4L19 7"/></svg>
                    HIPAA
                  </div>
                  <div class="flex items-center gap-1.5 px-2.5 py-1 rounded-md text-[10px] font-medium bg-green-400/10 text-green-400">
                    <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M5 13l4 4L19 7"/></svg>
                    GDPR
                  </div>
                  <div class="flex items-center gap-1.5 px-2.5 py-1 rounded-md text-[10px] font-medium bg-green-400/10 text-green-400">
                    <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M5 13l4 4L19 7"/></svg>
                    DPDP
                  </div>
                </div>
              </div>
            </div>

            <!-- Floating Alert Card -->
            <div class="absolute -left-16 top-1/3 glass-card rounded-xl p-3 shadow-lg animate-float" style="animation-delay: 1s; border: 1px solid var(--border);">
              <div class="flex items-center gap-2">
                <div class="w-8 h-8 rounded-lg flex items-center justify-center bg-green-400/10">
                  <svg class="w-4 h-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                </div>
                <div>
                  <p class="text-[10px] font-display font-medium" style="color: var(--text-primary);">‚Çπ5L saved</p>
                  <p class="text-[9px]" style="color: var(--text-muted);">annually</p>
                </div>
              </div>
            </div>

            <!-- Floating Metric -->
            <div class="absolute -right-8 bottom-8 glass-card rounded-xl p-3 shadow-lg animate-float" style="animation-delay: 2s; border: 1px solid var(--border);">
              <div class="flex items-center gap-2">
                <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: rgba(0,229,255,0.1);">
                  <svg class="w-4 h-4" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"/></svg>
                </div>
                <div>
                  <p class="text-[10px] font-display font-medium" style="color: var(--text-primary);">46% less waste</p>
                  <p class="text-[9px]" style="color: var(--text-muted);">FIFO automated</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2">
      <span class="text-[10px] font-mono tracking-wider uppercase" style="color: var(--text-muted);">Scroll</span>
      <div class="w-5 h-8 rounded-full border-2 flex items-start justify-center p-1" style="border-color: var(--border);">
        <div class="w-1 h-2 rounded-full animate-bounce" style="background: var(--accent);"></div>
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <!-- VALUE PROPOSITION                           -->
  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="relative py-20 lg:py-28" style="background: var(--bg-secondary);">
    <div class="section-padding max-w-[1440px] mx-auto">
      <div class="max-w-3xl mx-auto text-center mb-16 animate-in">
        <span class="badge mb-4">Why Aura Global</span>
        <h2 class="font-display font-bold text-3xl sm:text-4xl lg:text-5xl mb-6" style="color: var(--text-primary);">
          Traditional systems are <span class="text-gradient">broken</span>. We fixed them.
        </h2>
        <p class="text-base lg:text-lg" style="color: var(--text-muted);">
          Our Medical Inventory Management System combines Strategic Minimalism with the rigorous security of HIPAA, GDPR, and DPDP compliance. Never run out. Never over-order. Always audit-ready.
        </p>
      </div>

      <!-- Impact Metrics Table -->
      <div class="glass-card rounded-2xl overflow-hidden animate-in">
        <div class="overflow-x-auto">
          <table class="w-full text-left">
            <thead>
              <tr style="background: var(--surface);">
                <th class="px-6 py-4 text-xs font-display font-semibold uppercase tracking-wider" style="color: var(--text-muted);">Metric</th>
                <th class="px-6 py-4 text-xs font-display font-semibold uppercase tracking-wider" style="color: var(--text-muted);">Industry Average</th>
                <th class="px-6 py-4 text-xs font-display font-semibold uppercase tracking-wider" style="color: var(--accent);">Aura Global Impact</th>
              </tr>
            </thead>
            <tbody class="divide-y" style="border-color: var(--border);">
              {[
                { metric: 'Inventory Waste', avg: '12-18%', aura: '<5% (FIFO automation)', icon: 'üìâ' },
                { metric: 'Stockout Incidents', avg: '4-6 per month', aura: '<1 per month (Smart alerts)', icon: 'üîî' },
                { metric: 'Compliance Audit Prep', avg: '2-3 weeks', aura: 'Instant (100% audit-ready)', icon: '‚úì' },
                { metric: 'Equipment Downtime', avg: '15-20 days/year', aura: '5-8 days (Preventive maintenance)', icon: 'üîß' },
                { metric: 'Manual Data Entry', avg: '8-10 hrs/week', aura: '<1 hr (Barcode scanning)', icon: '‚ö°' },
              ].map((row) => (
                <tr class="transition-colors hover:bg-[var(--surface)]" style="border-color: var(--border);">
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-3">
                      <span class="text-base">{row.icon}</span>
                      <span class="text-sm font-display font-medium" style="color: var(--text-primary);">{row.metric}</span>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-sm" style="color: var(--text-muted);">{row.avg}</td>
                  <td class="px-6 py-4">
                    <span class="text-sm font-semibold" style="color: var(--accent);">{row.aura}</span>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <!-- PRODUCTS SECTION                            -->
  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="relative py-20 lg:py-28" style="background: var(--bg-primary);">
    <!-- Background accent -->
    <div class="absolute top-0 right-0 w-[500px] h-[500px] rounded-full opacity-5 blur-[150px]" style="background: var(--accent);"></div>

    <div class="section-padding max-w-[1440px] mx-auto">
      <div class="text-center mb-16 animate-in">
        <span class="badge mb-4">
          <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/></svg>
          Our Products
        </span>
        <h2 class="font-display font-bold text-3xl sm:text-4xl lg:text-5xl mb-4" style="color: var(--text-primary);">
          One ecosystem. <span class="text-gradient">Complete control.</span>
        </h2>
        <p class="text-base max-w-2xl mx-auto" style="color: var(--text-muted);">
          Three integrated products designed to transform every layer of healthcare operations ‚Äî from inventory to clinical management to patient engagement.
        </p>
        <p class="text-sm font-display font-semibold mt-4" style="color: var(--accent);">üéâ First 26 Customers Get 26% OFF ‚Äî Limited Time!</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Card 1: Medical Inventory Management System -->
        <div class="group glass-card rounded-2xl p-7 transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl hover:shadow-[var(--accent)]/5 animate-in relative overflow-hidden">
          <div class="absolute top-4 right-4 flex gap-2">
            <span class="badge text-[10px]">üöÄ Launching Soon</span>
          </div>
          <div class="w-14 h-14 rounded-2xl flex items-center justify-center mb-6 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3" style="background: rgba(0,229,255,0.1);">
            <svg class="w-7 h-7" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
            </svg>
          </div>
          <h3 class="font-display font-bold text-xl mb-3" style="color: var(--text-primary);">Medical Inventory System</h3>
          <p class="text-sm mb-5 leading-relaxed" style="color: var(--text-muted);">
            Complete hospital asset & compliance solution. FIFO automation, expiration tracking, real-time alerts, and instant audit readiness.
          </p>
          <ul class="space-y-2 mb-5">
            <li class="flex items-center gap-2 text-xs" style="color: var(--text-secondary);">
              <svg class="w-3.5 h-3.5 flex-shrink-0" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
              Real-time stock monitoring & smart alerts
            </li>
            <li class="flex items-center gap-2 text-xs" style="color: var(--text-secondary);">
              <svg class="w-3.5 h-3.5 flex-shrink-0" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
              HIPAA, GDPR, DPDP compliance built-in
            </li>
            <li class="flex items-center gap-2 text-xs" style="color: var(--text-secondary);">
              <svg class="w-3.5 h-3.5 flex-shrink-0" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
              Full asset lifecycle & maintenance tracking
            </li>
          </ul>
          <div class="glass-card rounded-xl p-3 mb-5 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <p class="text-xs font-display font-medium" style="color: var(--accent);">Save ‚Çπ13,000+/month with early-bird pricing</p>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-xs font-mono" style="color: var(--text-muted);" id="card1-spots">18 of 26 spots left</span>
            <a href="/features" class="text-xs font-display font-semibold flex items-center gap-1 transition-colors" style="color: var(--accent);">
              Learn More
              <svg class="w-3 h-3 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
            </a>
          </div>
          <div class="absolute inset-0 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none" style="box-shadow: inset 0 0 60px rgba(0,229,255,0.03);"></div>
        </div>

        <!-- Card 2: GoEMR -->
        <div class="group glass-card rounded-2xl p-7 transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl hover:shadow-[var(--accent)]/5 animate-in relative overflow-hidden" style="animation-delay: 0.1s;">
          <div class="absolute top-4 right-4">
            <span class="badge text-[10px]">Coming Q3 2026</span>
          </div>
          <div class="w-14 h-14 rounded-2xl flex items-center justify-center mb-6 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3" style="background: rgba(0,229,255,0.1);">
            <svg class="w-7 h-7" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h3 class="font-display font-bold text-xl mb-3" style="color: var(--text-primary);">GoEMR</h3>
          <p class="text-sm mb-5 leading-relaxed" style="color: var(--text-muted);">
            AI-assisted clinical management. Echo AI drafts consult notes, auto-populates billing, and integrates telemedicine ‚Äî all in one platform.
          </p>
          <ul class="space-y-2 mb-5">
            <li class="flex items-center gap-2 text-xs" style="color: var(--text-secondary);">
              <svg class="w-3.5 h-3.5 flex-shrink-0" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
              AI-powered charting & voice-to-text
            </li>
            <li class="flex items-center gap-2 text-xs" style="color: var(--text-secondary);">
              <svg class="w-3.5 h-3.5 flex-shrink-0" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
              e-Prescribing with drug interaction alerts
            </li>
            <li class="flex items-center gap-2 text-xs" style="color: var(--text-secondary);">
              <svg class="w-3.5 h-3.5 flex-shrink-0" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
