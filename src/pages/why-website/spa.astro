---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Why Spas Need a Website - Aura Global Corporation">

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <!-- BREADCRUMB                                  -->
  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="relative py-6 border-b" style="background: var(--bg-primary); border-color: var(--border);">
    <div class="section-padding max-w-[1440px] mx-auto">
      <nav aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-sm">
          <li>
            <a href="/why-website" class="transition-colors hover:text-[var(--accent)]" style="color: var(--text-muted);">
              Why a Website?
            </a>
          </li>
          <li style="color: var(--text-muted);">/</li>
          <li style="color: var(--text-primary);" class="font-display font-medium">
            üßñ Spa & Wellness Center
          </li>
        </ol>
      </nav>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <!-- HERO SECTION                                -->
  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="relative min-h-[85vh] flex items-center overflow-hidden" style="background: var(--bg-primary);">
    <!-- Background Effects -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-grid-pattern bg-grid opacity-40 dark:opacity-100"></div>
      <div class="absolute top-1/4 right-0 w-[500px] h-[500px] rounded-full opacity-20 blur-[120px]" style="background: var(--accent);"></div>
      <div class="absolute bottom-1/4 left-0 w-[400px] h-[400px] rounded-full opacity-10 blur-[100px]" style="background: var(--accent);"></div>
    </div>

    <div class="relative section-padding max-w-[1440px] mx-auto w-full py-20 lg:py-28">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full mb-6 animate-fade-up" style="background: rgba(0,229,255,0.08); border: 1px solid rgba(0,229,255,0.15);">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full opacity-75" style="background: var(--accent);"></span>
            <span class="relative inline-flex rounded-full h-2 w-2" style="background: var(--accent);"></span>
          </span>
          <span class="text-xs font-display font-medium" style="color: var(--accent);">Transform Your Wellness Business</span>
        </div>

        <h1 class="font-display font-extrabold text-4xl sm:text-5xl lg:text-6xl xl:text-7xl leading-[1.05] mb-6 hero-title">
          <span style="color: var(--text-primary);">Your Clients Want to Relax</span><br/>
          <span class="text-gradient">Let Them Start Online</span> üßñ
        </h1>

        <p class="text-lg lg:text-xl leading-relaxed mb-8 max-w-3xl mx-auto hero-subtitle" style="color: var(--text-muted);">
          Create a calming digital presence that converts website visitors into booked appointments. Showcase your ambiance, sell packages 24/7, and let clients browse treatments at their leisure.
        </p>

        <div class="flex flex-wrap justify-center gap-4 hero-ctas">
          <a href="#pricing" class="btn-primary">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
            Get Your Website Today
          </a>
          <a href="/services" class="btn-secondary">
            View Service Plans
          </a>
        </div>

        <p class="mt-6 text-sm" style="color: var(--text-muted);">
          Starting at <span style="color: var(--accent);" class="font-bold">‚Çπ9,999 one-time</span> ¬∑ FREE hosting forever ¬∑ No monthly fees
        </p>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2">
      <span class="text-[10px] font-mono tracking-wider uppercase" style="color: var(--text-muted);">Scroll to Learn Why</span>
      <div class="w-5 h-8 rounded-full border-2 flex items-start justify-center p-1" style="border-color: var(--border);">
        <div class="w-1 h-2 rounded-full animate-bounce" style="background: var(--accent);"></div>
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <!-- THE PROBLEM SECTION                         -->
  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="relative py-20 lg:py-28" style="background: var(--bg-secondary);">
    <div class="section-padding max-w-[1440px] mx-auto">
      <div class="max-w-3xl mx-auto text-center mb-16 animate-in">
        <span class="badge mb-4">Without a Website</span>
        <h2 class="font-display font-bold text-3xl sm:text-4xl lg:text-5xl mb-6" style="color: var(--text-primary);">
          The <span class="text-gradient">Challenge</span> Spas Face
        </h2>
        <p class="text-base lg:text-lg" style="color: var(--text-muted);">
          In today's digital-first world, not having a website means you're invisible to potential clients who are actively searching for wellness services right now.
        </p>
      </div>

      <!-- Pain Points Grid -->
      <div class="grid md:grid-cols-2 gap-6 max-w-5xl mx-auto">
        <!-- Pain Point 1 -->
        <div class="glass-card rounded-2xl p-8 animate-in group hover:-translate-y-2 transition-all duration-300 border-l-4" style="border-left-color: rgba(255, 23, 68, 0.5);">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0" style="background: rgba(255, 23, 68, 0.1);">
              <svg class="w-6 h-6" style="color: #FF1744;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </div>
            <div>
              <h3 class="font-display font-bold text-xl mb-3" style="color: var(--text-primary);">Can't Convey Ambiance Online</h3>
              <p class="text-sm leading-relaxed" style="color: var(--text-muted);">
                Your spa's atmosphere is your competitive advantage ‚Äî but without high-quality photos and virtual tours, potential clients have no way to experience your luxurious, calming environment before booking.
              </p>
            </div>
          </div>
        </div>

        <!-- Pain Point 2 -->
        <div class="glass-card rounded-2xl p-8 animate-in group hover:-translate-y-2 transition-all duration-300 border-l-4" style="border-left-color: rgba(255, 23, 68, 0.5); animation-delay: 0.1s;">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0" style="background: rgba(255, 23, 68, 0.1);">
              <svg class="w-6 h-6" style="color: #FF1744;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
              </svg>
            </div>
            <div>
              <h3 class="font-display font-bold text-xl mb-3" style="color: var(--text-primary);">Missing Gift Card & Package Sales</h3>
              <p class="text-sm leading-relaxed" style="color: var(--text-muted);">
                Without online sales capability, you're losing thousands in gift card revenue, especially during holidays. Clients want to buy packages and memberships 24/7 ‚Äî not just during business hours.
              </p>
            </div>
          </div>
        </div>

        <!-- Pain Point 3 -->
        <div class="glass-card rounded-2xl p-8 animate-in group hover:-translate-y-2 transition-all duration-300 border-l-4" style="border-left-color: rgba(255, 23, 68, 0.5); animation-delay: 0.2s;">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0" style="background: rgba(255, 23, 68, 0.1);">
              <svg class="w-6 h-6" style="color: #FF1744;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </div>
            <div>
              <h3 class="font-display font-bold text-xl mb-3" style="color: var(--text-primary);">Clients Can't Browse at Leisure</h3>
              <p class="text-sm leading-relaxed" style="color: var(--text-muted);">
                Phone calls are disruptive and inconvenient. Modern clients want to research treatments, compare packages, read about therapists, and understand pricing at midnight ‚Äî on their own schedule.
              </p>
            </div>
          </div>
        </div>

        <!-- Pain Point 4 -->
        <div class="glass-card rounded-2xl p-8 animate-in group hover:-translate-y-2 transition-all duration-300 border-l-4" style="border-left-color: rgba(255, 23, 68, 0.5); animation-delay: 0.3s;">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0" style="background: rgba(255, 23, 68, 0.1);">
              <svg class="w-6 h-6" style="color: #FF1744;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
              </svg>
            </div>
            <div>
              <h3 class="font-display font-bold text-xl mb-3" style="color: var(--text-primary);">Losing to Spas with Online Presence</h3>
              <p class="text-sm leading-relaxed" style="color: var(--text-muted);">
                When someone searches "best spa near me," competitors with professional websites, online booking, and active social proof dominate the results. You're invisible in the search rankings.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <!-- THE SOLUTION SECTION                        -->
  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="relative py-20 lg:py-28" style="background: var(--bg-primary);">
    <div class="section-padding max-w-[1440px] mx-auto">
      <div class="max-w-3xl mx-auto text-center mb-16 animate-in">
        <span class="badge mb-4">What You Get</span>
        <h2 class="font-display font-bold text-3xl sm:text-4xl lg:text-5xl mb-6" style="color: var(--text-primary);">
          Your Complete <span class="text-gradient">Wellness Website</span>
        </h2>
        <p class="text-base lg:text-lg" style="color: var(--text-muted);">
          Everything you need to showcase your spa, sell packages online, and convert browsers into booked appointments.
        </p>
      </div>

      <!-- Feature Cards Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
        <!-- Feature 1 -->
        <div class="glass-card rounded-2xl p-8 animate-in group hover:-translate-y-2 transition-all duration-300">
          <div class="w-14 h-14 rounded-2xl flex items-center justify-center mb-5 group-hover:scale-110 transition-transform duration-300" style="background: rgba(0,229,255,0.1);">
            <svg class="w-7 h-7" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="font-display font-bold text-xl mb-3" style="color: var(--text-primary);">Ambiance Showcase</h3>
          <p class="text-sm leading-relaxed mb-4" style="color: var(--text-muted);">
            High-quality photo galleries and virtual tours that let clients feel the tranquil atmosphere before they arrive. First impressions happen online.
          </p>
          <div class="pt-4 border-t" style="border-color: var(--border);">
            <p class="text-xs font-display font-semibold" style="color: var(--accent);">Set the relaxation tone</p>
          </div>
        </div>

        <!-- Feature 2 -->
        <div class="glass-card rounded-2xl p-8 animate-in group hover:-translate-y-2 transition-all duration-300" style="animation-delay: 0.1s;">
          <div class="w-14 h-14 rounded-2xl flex items-center justify-center mb-5 group-hover:scale-110 transition-transform duration-300" style="background: rgba(0,229,255,0.1);">
            <svg class="w-7 h-7" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
            </svg>
          </div>
          <h3 class="font-display font-bold text-xl mb-3" style="color: var(--text-primary);">Package & Membership Sales</h3>
          <p class="text-sm leading-relaxed mb-4" style="color: var(--text-muted);">
            Sell treatment packages, gift cards, and memberships 24/7. Accept payments online and watch revenue grow while you sleep.
          </p>
          <div class="pt-4 border-t" style="border-color: var(--border);">
            <p class="text-xs font-display font-semibold" style="color: var(--accent);">+150% gift card sales</p>
          </div>
        </div>

        <!-- Feature 3 -->
        <div class="glass-card rounded-2xl p-8 animate-in group hover:-translate-y-2 transition-all duration-300" style="animation-delay: 0.2s;">
          <div class="w-14 h-14 rounded-2xl flex items-center justify-center mb-5 group-hover:scale-110 transition-transform duration-300" style="background: rgba(0,229,255,0.1);">
            <svg class="w-7 h-7" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h3 class="font-display font-bold text-xl mb-3" style="color: var(--text-primary);">Treatment Descriptions</h3>
          <p class="text-sm leading-relaxed mb-4" style="color: var(--text-muted);">
            Detailed service menus with benefits, durations, and pricing. Educate clients about your treatments so they book with confidence.
          </p>
          <div class="pt-4 border-t" style="border-color: var(--border);">
            <p class="text-xs font-display font-semibold" style="color: var(--accent);">Build trust & transparency</p>
          </div>
        </div>

        <!-- Feature 4 -->
        <div class="glass-card rounded-2xl p-8 animate-in group hover:-translate-y-2 transition-all duration-300" style="animation-delay: 0.3s;">
          <div class="w-14 h-14 rounded-2xl flex items-center justify-center mb-5 group-hover:scale-110 transition-transform duration-300" style="background: rgba(0,229,255,0.1);">
            <svg class="w-7 h-7" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h3 class="font-display font-bold text-xl mb-3" style="color: var(--text-primary);">Therapist Profiles</h3>
          <p class="text-sm leading-relaxed mb-4" style="color: var(--text-muted);">
            Showcase your team's certifications, specialties, and bios. Clients want to know who will be caring for them ‚Äî credentials build trust.
          </p>
          <div class="pt-4 border-t" style="border-color: var(--border);">
            <p class="text-xs font-display font-semibold" style="color: var(--accent);">Personal connection matters</p>
          </div>
        </div>

        <!-- Feature 5 -->
        <div class="glass-card rounded-2xl p-8 animate-in group hover:-translate-y-2 transition-all duration-300" style="animation-delay: 0.4s;">
          <div class="w-14 h-14 rounded-2xl flex items-center justify-center mb-5 group-hover:scale-110 transition-transform duration-300" style="background: rgba(0,229,255,0.1);">
            <svg class="w-7 h-7" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="font-display font-bold text-xl mb-3" style="color: var(--text-primary);">Online Booking System</h3>
          <p class="text-sm leading-relaxed mb-4" style="color: var(--text-muted);">
            Let clients book treatments, choose therapists, and select time slots 24/7. Reduce phone tag and no-shows with automated reminders.
          </p>
          <div class="pt-4 border-t" style="border-color: var(--border);">
            <p class="text-xs font-display font-semibold" style="color: var(--accent);">65% book online now</p>
          </div>
        </div>

        <!-- Feature 6 -->
        <div class="glass-card rounded-2xl p-8 animate-in group hover:-translate-y-2 transition-all duration-300" style="animation-delay: 0.5s;">
          <div class="w-14 h-14 rounded-2xl flex items-center justify-center mb-5 group-hover:scale-110 transition-transform duration-300" style="background: rgba(0,229,255,0.1);">
            <svg class="w-7 h-7" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
            </svg>
          </div>
          <h3 class="font-display font-bold text-xl mb-3" style="color: var(--text-primary);">Seasonal Promotions & Blog</h3>
          <p class="text-sm leading-relaxed mb-4" style="color: var(--text-muted);">
            Share wellness tips, promote seasonal specials, and engage clients with content. A blog improves SEO and positions you as an expert.
          </p>
          <div class="pt-4 border-t" style="border-color: var(--border);">
            <p class="text-xs font-display font-semibold" style="color: var(--accent);">Stay top-of-mind</p>
          </div>
        </div>
      </div>
    </div>
  </section>


