<script>
  import { gsap } from 'gsap';

  // Hero animations
  document.addEventListener('DOMContentLoaded', () => {
    gsap.fromTo('.hero-title',
      { opacity: 0, y: 30 },
      { opacity: 1, y: 0, duration: 0.8, ease: 'power3.out' }
    );

    gsap.fromTo('.hero-subtitle',
      { opacity: 0, y: 20 },
      { opacity: 1, y: 0, duration: 0.8, delay: 0.2, ease: 'power3.out' }
    );

    gsap.fromTo('.hero-ctas',
      { opacity: 0, y: 20 },
      { opacity: 1, y: 0, duration: 0.8, delay: 0.4, ease: 'power3.out' }
    );

    // Animate stats when they come into view
    const statNumbers = document.querySelectorAll('.stat-number');
    const statMultipliers = document.querySelectorAll('.stat-multiplier');

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const target = entry.target as HTMLElement;
          const finalValue = parseInt(target.getAttribute('data-value') || '0');
          const isMultiplier = target.classList.contains('stat-multiplier');

          gsap.to(target, {
            innerText: finalValue,
            duration: 2,
            snap: { innerText: 1 },
            onUpdate: function() {
              const current = Math.ceil(parseFloat(this.targets()[0].innerText));
              if (isMultiplier) {
                this.targets()[0].innerText = current + 'x';
              } else {
                this.targets()[0].innerText = current + '%';
              }
            }
          });

          observer.unobserve(target);
        }
      });
    }, { threshold: 0.5 });

    statNumbers.forEach(stat => observer.observe(stat));
    statMultipliers.forEach(stat => observer.observe(stat));

    // Animate-in elements
    const animateInElements = document.querySelectorAll('.animate-in');
    const inObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animated');
          inObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1 });

    animateInElements.forEach(el => inObserver.observe(el));
  });
</script>

