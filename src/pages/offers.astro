---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Claim Your 26% Discount - Aura Global Corporation">
  <!-- Hero Section -->
  <section class="section-padding py-20 lg:py-28 relative overflow-hidden">
    <div class="absolute inset-0 opacity-30 pointer-events-none">
      <div class="absolute top-20 left-10 w-96 h-96 bg-gradient-to-br from-aura-cyan/20 to-transparent rounded-full blur-3xl animate-pulse" style="animation-duration: 4s;"></div>
      <div class="absolute bottom-20 right-10 w-80 h-80 bg-gradient-to-tl from-aura-cyan/10 to-transparent rounded-full blur-3xl animate-pulse" style="animation-duration: 6s;"></div>
    </div>

    <div class="max-w-5xl mx-auto text-center relative z-10 animate-in">
      <div class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full mb-6 border-2" style="background: rgba(255, 23, 68, 0.05); border-color: rgba(255, 23, 68, 0.3);">
        <span class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></span>
        <span class="font-display font-bold text-sm sm:text-base uppercase tracking-wide" style="color: #FF1744;">
          Limited Time Offer
        </span>
      </div>

      <h1 class="text-4xl sm:text-5xl lg:text-7xl font-display font-black mb-6">
        Claim Your Exclusive <span class="text-gradient">26% Discount</span>
      </h1>
      <p class="text-lg sm:text-xl lg:text-2xl mb-6" style="color: var(--text-secondary);">
        Be among the first 26 customers to receive a one-time 26% discount on any of our products or services.
      </p>
      <p class="text-base lg:text-lg max-w-3xl mx-auto mb-8" style="color: var(--text-muted);">
        Fill out the form below and our team will reach out within 24 hours with your personalized quote.
      </p>

      <!-- Live Counter -->
      <div class="glass-card rounded-2xl p-6 sm:p-8 max-w-2xl mx-auto mb-8">
        <div class="flex items-center justify-between mb-4 flex-wrap gap-4">
          <span class="font-display font-semibold text-sm sm:text-base" style="color: var(--text-primary);">
            Spots Remaining:
          </span>
          <span class="font-display font-bold text-2xl sm:text-3xl" style="color: #FF1744;">
            <span id="offer-spots">14</span> of 26 spots left
          </span>
        </div>

        <!-- Progress Bar -->
        <div class="w-full h-4 rounded-full overflow-hidden" style="background: var(--surface);">
          <div id="offer-progress" class="h-full rounded-full bg-gradient-to-r from-red-500 to-aura-cyan transition-all duration-500" style="width: 46%;"></div>
        </div>
      </div>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="#claim-form" class="btn-primary">
          Claim Your Discount
        </a>
        <a href="#benefits" class="btn-secondary">
          See What's Included
        </a>
      </div>
    </div>
  </section>

  <!-- What You Get Section -->
  <section id="benefits" class="section-padding py-16 lg:py-20 relative" style="background: var(--bg-secondary);">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12 animate-in">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-display font-black mb-4" style="color: var(--text-primary);">
          What You Get with <span class="text-gradient">26% Off</span>
        </h2>
        <p class="text-base lg:text-lg" style="color: var(--text-muted);">
          Choose from our complete range of products and services
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8">
        <!-- Card 1: Medical Inventory -->
        <div class="glass-card rounded-2xl p-6 lg:p-8 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl animate-in">
          <div class="flex items-start gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0" style="background: var(--accent)/10;">
              <svg class="w-6 h-6" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-xl font-display font-bold mb-2" style="color: var(--text-primary);">Medical Inventory Management</h3>
              <p class="text-sm mb-4" style="color: var(--text-muted);">Comprehensive inventory control for healthcare facilities</p>
            </div>
          </div>

          <div class="border-t pt-4 mb-4" style="border-color: var(--border);">
            <div class="flex items-baseline gap-3 mb-2">
              <span class="text-xl font-display font-bold line-through" style="color: var(--text-muted);">‚Çπ15,000/mo</span>
              <span class="text-3xl font-display font-black" style="color: var(--accent);">‚Çπ11,100/mo</span>
            </div>
            <p class="text-xs font-semibold text-green-400">Save ‚Çπ3,900/month on any plan</p>
          </div>

          <div class="flex items-center gap-2">
            <span class="badge text-[10px]">HIPAA Compliant</span>
            <span class="badge text-[10px]">GDPR Ready</span>
          </div>
        </div>

        <!-- Card 2: GoEMR + Patient Portal -->
        <div class="glass-card rounded-2xl p-6 lg:p-8 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl animate-in">
          <div class="flex items-start gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0" style="background: var(--accent)/10;">
              <svg class="w-6 h-6" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-xl font-display font-bold mb-2" style="color: var(--text-primary);">GoEMR + Patient Portal</h3>
              <p class="text-sm mb-4" style="color: var(--text-muted);">Complete EMR system with integrated patient access</p>
            </div>
          </div>

          <div class="border-t pt-4 mb-4" style="border-color: var(--border);">
            <div class="flex items-baseline gap-3 mb-2">
              <span class="text-xl font-display font-bold line-through" style="color: var(--text-muted);">‚Çπ25,000/mo</span>
              <span class="text-3xl font-display font-black" style="color: var(--accent);">‚Çπ18,500/mo</span>
            </div>
            <p class="text-xs font-semibold text-green-400">Save ‚Çπ6,500/month on any plan</p>
          </div>

          <div class="flex items-center gap-2">
            <span class="badge text-[10px]">Cloud-Based</span>
            <span class="badge text-[10px]">Mobile Ready</span>
          </div>
        </div>

        <!-- Card 3: Website Development -->
        <div class="glass-card rounded-2xl p-6 lg:p-8 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl animate-in">
          <div class="flex items-start gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0" style="background: var(--accent)/10;">
              <svg class="w-6 h-6" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-xl font-display font-bold mb-2" style="color: var(--text-primary);">Website Development</h3>
              <p class="text-sm mb-4" style="color: var(--text-muted);">Professional websites for all business types</p>
            </div>
          </div>

          <div class="border-t pt-4 mb-4" style="border-color: var(--border);">
            <div class="space-y-2">
              <div class="flex items-center justify-between">
                <span class="text-sm" style="color: var(--text-muted);">Freedom Plan:</span>
                <div class="flex items-baseline gap-2">
                  <span class="text-sm line-through" style="color: var(--text-muted);">‚Çπ25,000</span>
                  <span class="text-lg font-display font-bold" style="color: var(--accent);">‚Çπ18,500</span>
                </div>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm" style="color: var(--text-muted);">Business Pro:</span>
                <div class="flex items-baseline gap-2">
                  <span class="text-sm line-through" style="color: var(--text-muted);">‚Çπ50,000</span>
                  <span class="text-lg font-display font-bold" style="color: var(--accent);">‚Çπ37,000</span>
                </div>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm" style="color: var(--text-muted);">Enterprise:</span>
                <div class="flex items-baseline gap-2">
                  <span class="text-sm line-through" style="color: var(--text-muted);">‚Çπ1,00,000</span>
                  <span class="text-lg font-display font-bold" style="color: var(--accent);">‚Çπ74,000</span>
                </div>
              </div>
            </div>
            <p class="text-xs font-semibold text-green-400 mt-3">26% off any package</p>
          </div>

          <div class="flex items-center gap-2">
            <span class="badge text-[10px]">SEO Optimized</span>
            <span class="badge text-[10px]">Responsive</span>
          </div>
        </div>

        <!-- Card 4: Bundle Deal -->
        <div class="glass-card rounded-2xl p-6 lg:p-8 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl animate-in border-2" style="border-color: var(--accent);">
          <div class="absolute -top-3 -right-3 px-3 py-1.5 rounded-full text-xs font-display font-bold uppercase" style="background: var(--accent); color: var(--bg-primary);">
            Best Value
          </div>

          <div class="flex items-start gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0" style="background: var(--accent)/10;">
              <svg class="w-6 h-6" style="color: var(--accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-xl font-display font-bold mb-2" style="color: var(--text-primary);">Bundle Deal</h3>
              <p class="text-sm mb-4" style="color: var(--text-muted);">Combine 2+ services and save even more</p>
            </div>
          </div>

          <div class="border-t pt-4 mb-4" style="border-color: var(--border);">
            <div class="flex items-baseline gap-3 mb-2">
              <span class="text-xl font-display font-bold line-through" style="color: var(--text-muted);">‚Çπ65,000/mo</span>
              <span class="text-3xl font-display font-black" style="color: var(--accent);">‚Çπ48,100/mo</span>
            </div>
            <p class="text-xs font-semibold text-green-400 mb-2">Save ‚Çπ16,900/month (26% OFF)</p>
            <p class="text-xs" style="color: var(--text-muted);">Example: Inventory + GoEMR + Website</p>
          </div>

          <div class="flex items-center gap-2">
            <span class="badge-success text-[10px]">Maximum Savings</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="section-padding py-16 lg:py-20 relative">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-12 animate-in">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-display font-black mb-4" style="color: var(--text-primary);">
          How It <span class="text-gradient">Works</span>
        </h2>
        <p class="text-base lg:text-lg" style="color: var(--text-muted);">
          Three simple steps to claim your exclusive discount
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
        <!-- Step 1 -->
        <div class="text-center animate-in">
          <div class="w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-6" style="background: var(--accent)/10;">
            <span class="text-3xl font-display font-black" style="color: var(--accent);">1</span>
          </div>
          <h3 class="text-xl font-display font-bold mb-3" style="color: var(--text-primary);">Fill Out the Form</h3>
          <p class="text-sm" style="color: var(--text-muted);">
            Complete the form below with your business details and service preferences. Takes less than 2 minutes.
          </p>
        </div>

        <!-- Step 2 -->
        <div class="text-center animate-in">
          <div class="w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-6" style="background: var(--accent)/10;">
            <span class="text-3xl font-display font-black" style="color: var(--accent);">2</span>
          </div>
          <h3 class="text-xl font-display font-bold mb-3" style="color: var(--text-primary);">We Review & Contact You</h3>
          <p class="text-sm" style="color: var(--text-muted);">
            Our team reviews your submission and contacts you within 24 hours to discuss your needs and answer questions.
          </p>
        </div>

        <!-- Step 3 -->
        <div class="text-center animate-in">
          <div class="w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-6" style="background: var(--accent)/10;">
            <span class="text-3xl font-display font-black" style="color: var(--accent);">3</span>
          </div>
          <h3 class="text-xl font-display font-bold mb-3" style="color: var(--text-primary);">Get Your Discounted Quote</h3>
          <p class="text-sm" style="color: var(--text-muted);">
            Receive a personalized quote with the full 26% discount applied. No hidden fees or surprises.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Claim Form Section -->
  <section id="claim-form" class="section-padding py-16 lg:py-20 relative" style="background: var(--bg-secondary);">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12 animate-in">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-display font-black mb-4" style="color: var(--text-primary);">
          Claim Your <span class="text-gradient">26% Discount</span>
        </h2>
        <p class="text-base lg:text-lg" style="color: var(--text-muted);">
          Fill out the form below to reserve your spot
        </p>
      </div>

      <!-- Form Container -->
      <div id="form-container">
        <form id="discount-form" class="glass-card rounded-2xl p-6 lg:p-10 animate-in" action="https://api.web3forms.com/submit" method="POST">
          <input type="hidden" name="access_key" value="465e0be6-22bc-459c-abc6-7627ae7a32b2" />
          <input type="hidden" name="subject" value="New 26% Discount Claim" />
          <input type="hidden" name="from_name" value="Aura Global Website" />
          <input type="checkbox" name="botcheck" class="hidden" style="display:none" />
          <!-- Name & Email Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
              <label for="full-name" class="block text-sm font-display font-semibold mb-2" style="color: var(--text-primary);">
                Full Name <span style="color: #FF1744;">*</span>
              </label>
              <input
                type="text"
                id="full-name"
                name="full-name"
                required
                class="w-full px-4 py-3 rounded-xl border transition-all duration-200 focus:outline-none focus:ring-2"
                style="background: var(--surface); border-color: var(--border); color: var(--text-primary); --tw-ring-color: var(--accent);"
                placeholder="John Doe"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-display font-semibold mb-2" style="color: var(--text-primary);">
                Email Address <span style="color: #FF1744;">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-xl border transition-all duration-200 focus:outline-none focus:ring-2"
                style="background: var(--surface); border-color: var(--border); color: var(--text-primary); --tw-ring-color: var(--accent);"
                placeholder="john@example.com"
              />
            </div>
          </div>

          <!-- Phone & Business Name Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
              <label for="phone" class="block text-sm font-display font-semibold mb-2" style="color: var(--text-primary);">
                Phone Number <span style="color: #FF1744;">*</span>
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full px-4 py-3 rounded-xl border transition-all duration-200 focus:outline-none focus:ring-2"
                style="background: var(--surface); border-color: var(--border); color: var(--text-primary); --tw-ring-color: var(--accent);"
                placeholder="+91-XXXXX-XXXXX"
              />
            </div>
            <div>
              <label for="business-name" class="block text-sm font-display font-semibold mb-2" style="color: var(--text-primary);">
                Business/Practice Name
              </label>
              <input
                type="text"
                id="business-name"
                name="business-name"
                class="w-full px-4 py-3 rounded-xl border transition-all duration-200 focus:outline-none focus:ring-2"
                style="background: var(--surface); border-color: var(--border); color: var(--text-primary); --tw-ring-color: var(--accent);"
                placeholder="ABC Healthcare Clinic"
              />
            </div>
          </div>

          <!-- Business Type -->
          <div class="mb-6">
            <label for="business-type" class="block text-sm font-display font-semibold mb-2" style="color: var(--text-primary);">
              Business Type
            </label>
            <select
              id="business-type"
              name="business-type"
              class="w-full px-4 py-3 rounded-xl border transition-all duration-200 focus:outline-none focus:ring-2"
              style="background: var(--surface); border-color: var(--border); color: var(--text-primary); --tw-ring-color: var(--accent);"
            >
              <option value="">Select your business type</option>
              <option value="doctor-healthcare">Doctor/Healthcare</option>
              <option value="yoga-studio">Yoga Studio</option>
              <option value="salon">Salon</option>
              <option value="spa">Spa</option>
              <option value="fitness-gym">Fitness/Gym</option>
              <option value="restaurant">Restaurant</option>
              <option value="consultant">Consultant</option>
              <option value="tutor">Tutor</option>
              <option value="other">Other</option>
            </select>
          </div>

          <!-- Interested In (Checkboxes) -->
          <div class="mb-6">
            <label class="block text-sm font-display font-semibold mb-3" style="color: var(--text-primary);">
              Interested In <span style="color: #FF1744;">*</span>
            </label>
            <div class="space-y-3">
              <label class="flex items-start gap-3 cursor-pointer group">
                <input
                  type="checkbox"
                  name="interested-in"
                  value="medical-inventory"
                  class="mt-0.5 w-5 h-5 rounded border-2 transition-all duration-200 cursor-pointer"
                  style="border-color: var(--border); accent-color: var(--accent);"
                />
                <span class="text-sm group-hover:text-[var(--accent)] transition-colors" style="color: var(--text-secondary);">Medical Inventory Management System</span>
              </label>
              <label class="flex items-start gap-3 cursor-pointer group">
                <input
                  type="checkbox"
                  name="interested-in"
                  value="goemr-patient-portal"
                  class="mt-0.5 w-5 h-5 rounded border-2 transition-all duration-200 cursor-pointer"
                  style="border-color: var(--border); accent-color: var(--accent);"
                />
                <span class="text-sm group-hover:text-[var(--accent)] transition-colors" style="color: var(--text-secondary);">GoEMR + Patient Portal</span>
              </label>
              <label class="flex items-start gap-3 cursor-pointer group">
                <input
                  type="checkbox"
                  name="interested-in"
                  value="website-freedom"
                  class="mt-0.5 w-5 h-5 rounded border-2 transition-all duration-200 cursor-pointer"
                  style="border-color: var(--border); accent-color: var(--accent);"
                />
                <span class="text-sm group-hover:text-[var(--accent)] transition-colors" style="color: var(--text-secondary);">Website Development - Freedom</span>
              </label>
              <label class="flex items-start gap-3 cursor-pointer group">
                <input
                  type="checkbox"
                  name="interested-in"
                  value="website-business-pro"
                  class="mt-0.5 w-5 h-5 rounded border-2 transition-all duration-200 cursor-pointer"
                  style="border-color: var(--border); accent-color: var(--accent);"
                />
                <span class="text-sm group-hover:text-[var(--accent)] transition-colors" style="color: var(--text-secondary);">Website Development - Business Pro</span>
              </label>
              <label class="flex items-start gap-3 cursor-pointer group">
                <input
                  type="checkbox"
                  name="interested-in"
                  value="website-enterprise"
                  class="mt-0.5 w-5 h-5 rounded border-2 transition-all duration-200 cursor-pointer"
                  style="border-color: var(--border); accent-color: var(--accent);"
                />
                <span class="text-sm group-hover:text-[var(--accent)] transition-colors" style="color: var(--text-secondary);">Website Development - Enterprise</span>
              </label>
              <label class="flex items-start gap-3 cursor-pointer group">
                <input
                  type="checkbox"
                  name="interested-in"
                  value="bundle-deal"
                  class="mt-0.5 w-5 h-5 rounded border-2 transition-all duration-200 cursor-pointer"
                  style="border-color: var(--border); accent-color: var(--accent);"
                />
                <span class="text-sm group-hover:text-[var(--accent)] transition-colors" style="color: var(--text-secondary);">Bundle Deal (2+ Services)</span>
              </label>
            </div>
            <p id="checkbox-error" class="text-xs mt-2 hidden" style="color: #FF1744;">Please select at least one service</p>
          </div>

          <!-- Users/Locations & Budget Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
              <label for="users" class="block text-sm font-display font-semibold mb-2" style="color: var(--text-primary);">
                Number of Users/Locations
              </label>
              <select
                id="users"
                name="users"
                class="w-full px-4 py-3 rounded-xl border transition-all duration-200 focus:outline-none focus:ring-2"
                style="background: var(--surface); border-color: var(--border); color: var(--text-primary); --tw-ring-color: var(--accent);"
              >
                <option value="">Select range</option>
                <option value="1-5">1-5</option>
                <option value="6-15">6-15</option>
                <option value="16-50">16-50</option>
                <option value="51-100">51-100</option>
                <option value="100+">100+</option>
              </select>
