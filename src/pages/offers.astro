  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
  <script is:inline>
    // Campaign Data Fetch
    async function fetchCampaignData() {
      try {
        const res = await fetch('/campaign-data.json');
        const data = await res.json();

        const offerSpots = document.getElementById('offer-spots');
        const offerProgress = document.getElementById('offer-progress');

        if (offerSpots && data.spotsRemaining !== undefined) {
          offerSpots.textContent = data.spotsRemaining;

          // Update progress bar
          const spotsTaken = 26 - data.spotsRemaining;
          const progressPercent = (spotsTaken / 26) * 100;
          if (offerProgress) {
            offerProgress.style.width = progressPercent + '%';
          }
        }
      } catch (e) {
        console.log('Using fallback campaign data');
      }
    }
    fetchCampaignData();

    // Form Validation & Submission
    const form = document.getElementById('discount-form');
    const formContainer = document.getElementById('form-container');
    const successMessage = document.getElementById('success-message');
    const checkboxError = document.getElementById('checkbox-error');

    form?.addEventListener('submit', async function(e) {
      e.preventDefault();

      // Validate at least one checkbox is checked
      const checkboxes = form.querySelectorAll('input[name="interested-in"]:checked');
      if (checkboxes.length === 0) {
        checkboxError?.classList.remove('hidden');
        const firstCheckbox = form.querySelector('input[name="interested-in"]');
        firstCheckbox?.focus();
        return;
      } else {
        checkboxError?.classList.add('hidden');
      }

      // Validate email format
      const emailInput = document.getElementById('email');
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (emailInput && !emailRegex.test(emailInput.value)) {
        emailInput.focus();
        emailInput.setCustomValidity('Please enter a valid email address');
        emailInput.reportValidity();
        return;
      }

      // Show loading state
      const submitBtn = form.querySelector('button[type="submit"]');
      const originalBtnHTML = submitBtn?.innerHTML;
      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<svg class="w-5 h-5 animate-spin mx-auto" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"/></svg>';
      }

      try {
        const formData = new FormData(form);
        const json = JSON.stringify(Object.fromEntries(formData));
        const res = await fetch('https://api.web3forms.com/submit', {
          method: 'POST',
          body: json,
          headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' }
        });
        const data = await res.json();

        if (data.success) {
          formContainer?.classList.add('hidden');
          successMessage?.classList.remove('hidden');
          successMessage?.scrollIntoView({ behavior: 'smooth', block: 'center' });

          // Animate success elements
          if (typeof gsap !== 'undefined' && successMessage) {
            gsap.fromTo(successMessage.querySelector('.success-checkmark'),
              { scale: 0, rotation: -180 },
              { scale: 1, rotation: 0, duration: 0.6, ease: 'back.out(1.7)' }
            );
            gsap.fromTo(successMessage.querySelector('.success-title'),
              { opacity: 0, y: 20 },
              { opacity: 1, y: 0, duration: 0.5, delay: 0.3, ease: 'power2.out' }
            );
            gsap.fromTo(successMessage.querySelectorAll('.success-desc'),
              { opacity: 0, y: 15 },
              { opacity: 1, y: 0, duration: 0.5, delay: 0.5, stagger: 0.15, ease: 'power2.out' }
            );
          }
        } else {
          throw new Error('Form submission failed');
        }
      } catch (err) {
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.innerHTML = originalBtnHTML;
        }
        alert('Something went wrong. Please try again or email us at hello@auraglobalcorp.com');
      }
    });

    // Clear custom validity on email input
    const emailInput = document.getElementById('email');
    emailInput?.addEventListener('input', function() {
      this.setCustomValidity('');
    });

    // FAQ Accordion
    const faqItems = document.querySelectorAll('.faq-item');
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      const answer = item.querySelector('.faq-answer');
      const chevron = item.querySelector('.faq-chevron');

      question?.addEventListener('click', () => {
        const isOpen = answer.style.maxHeight && answer.style.maxHeight !== '0px';

        // Close all other FAQs
        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            const otherAnswer = otherItem.querySelector('.faq-answer');
            const otherChevron = otherItem.querySelector('.faq-chevron');
            otherAnswer.style.maxHeight = '0px';
            otherChevron.style.transform = 'rotate(0deg)';
          }
        });

        // Toggle current FAQ
        if (isOpen) {
          answer.style.maxHeight = '0px';
          chevron.style.transform = 'rotate(0deg)';
        } else {
          answer.style.maxHeight = answer.scrollHeight + 'px';
          chevron.style.transform = 'rotate(180deg)';
        }
      });
    });

    // GSAP Animations
    if (typeof gsap !== 'undefined') {
      // Hero animation
      gsap.from('.animate-in', {
        opacity: 0,
        y: 30,
        duration: 0.8,
        stagger: 0.1,
        ease: 'power3.out'
      });
    }

    // Intersection Observer for scroll animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');

          if (typeof gsap !== 'undefined') {
            gsap.to(entry.target, {
              opacity: 1,
              y: 0,
              duration: 0.6,
              ease: 'power3.out'
            });
          }
        }
      });
    }, observerOptions);

    document.querySelectorAll('.animate-in').forEach(el => {
      observer.observe(el);
    });
  </script>
